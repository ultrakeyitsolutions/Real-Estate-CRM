            {
                @foreach (var property in ViewBag.Properties)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="course-item bg-light" style="cursor: pointer;" onclick="window.location.href='/Home/ProjectDetails/@property.PropertyId'">
