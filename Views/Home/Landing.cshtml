    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Counter Animation
        function animateCounter(element) {
            const target = parseInt(element.getAttribute('data-target'));
            const duration = 2000;
            const step = target / (duration / 16);
            let current = 0;

            const timer = setInterval(() => {
                current += step;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current);
            }, 16);
        }

        // Intersection Observer for counters
        const observerOptions = {
            threshold: 0.5,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const counters = entry.target.querySelectorAll('.counter');
                    counters.forEach(counter => {
                        if (!counter.classList.contains('animated')) {
                            counter.classList.add('animated');
                            animateCounter(counter);
                        }
                    });
                }
            });
        }, observerOptions);

        document.addEventListener('DOMContentLoaded', function () {
            // Progressive Logo Loading Effect
            const overlay = document.getElementById('spinner');
            const logoImage = document.getElementById('logoImage');
            const logoText = document.getElementById('logoText');
            const loadingBar = document.getElementById('loadingBar');
            
            if (!overlay) return;
            
            let progress = 0;
            const duration = 5000; // 5 seconds
            const interval = 50; // Update every 50ms
            const increment = (100 / (duration / interval));
            
            const progressInterval = setInterval(() => {
                progress += increment;
                
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(progressInterval);
                    
                    // Hide overlay after completion
                    setTimeout(() => {
                        overlay.style.opacity = '0';
                        setTimeout(() => {
                            overlay.style.display = 'none';
                        }, 500);
                    }, 300);
                }
                
                // Update progress bar
                if (loadingBar) {
                    loadingBar.style.width = progress + '%';
                }
                
                // Update logo opacity (low to high visibility)
                const opacity = 0.2 + (progress / 100) * 0.8; // From 0.2 to 1.0
                if (logoImage) {
                    logoImage.style.opacity = opacity;
                }
                if (logoText) {
                    logoText.style.opacity = opacity;
                }
            }, interval);

            // Quote Slider
            const slides = document.querySelectorAll('.quote-slide');
            let currentSlide = 0;

            function showNextSlide() {
                slides[currentSlide].classList.remove('active');
                currentSlide = (currentSlide + 1) % slides.length;
                slides[currentSlide].classList.add('active');
            }

            // Faster transition - 2 seconds instead of 3
            setInterval(showNextSlide, 2000);

            // Infinite Testimonial Carousel - Clone cards for seamless loop
            const testimonialTrack = document.querySelector('.testimonial-track');
            if (testimonialTrack) {
                const cards = Array.from(testimonialTrack.children);
                
                // Clone all cards once for smooth infinite scroll
                cards.forEach(card => {
                    const clone = card.cloneNode(true);
                    testimonialTrack.appendChild(clone);
                });
            }

            // Observe statistics section for counter animation
            const statsSection = document.querySelector('#statistics-section');
            if (statsSection) {
                observer.observe(statsSection);
                
                // If statistics section is already visible, trigger animation immediately
                const rect = statsSection.getBoundingClientRect();
                const isVisible = (rect.top >= 0 && rect.bottom <= window.innerHeight);
                if (isVisible) {
                    const counters = statsSection.querySelectorAll('.counter');
                    counters.forEach(counter => {
                        if (!counter.classList.contains('animated')) {
                            counter.classList.add('animated');
                            animateCounter(counter);
                        }
                    });
                }
            }

            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    console.log('Link clicked:', href);
                    console.log('Has data-bs-toggle:', this.hasAttribute('data-bs-toggle'));
                    
                    // Skip if href is just '#' or if it has data-bs-toggle (modal/dropdown)
                    if (href === '#' || this.hasAttribute('data-bs-toggle')) {
                        console.log('Skipping scroll for:', href);
                        return;
                    }
                    
                    e.preventDefault();
                    console.log('Looking for target:', href);
                    const target = document.querySelector(href);
                    console.log('Target found:', target);
                    
                    if (target) {
                        // Close mobile navbar if open
                        const navbarCollapse = document.getElementById('navbarCollapse');
                        if (navbarCollapse && navbarCollapse.classList.contains('show')) {
                            const bsCollapse = new bootstrap.Collapse(navbarCollapse, {
                                toggle: false
                            });
                            bsCollapse.hide();
                        }
                        
                        // Get navbar height for offset
                        const navbar = document.querySelector('.navbar');
                        const navbarHeight = navbar ? navbar.offsetHeight : 0;
                        console.log('Navbar height:', navbarHeight);
                        
                        // Calculate position with offset
                        const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
                        console.log('Scrolling to position:', targetPosition);
                        
                        // Smooth scroll to position
                        window.scrollTo({
                            top: targetPosition,
                            behavior: 'smooth'
                        });
                    } else {
                        console.error('Target not found for:', href);
                    }
                });
            });

            // Keep counters at original values - no fluctuation
        });

