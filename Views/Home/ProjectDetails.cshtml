@model dynamic
@{
    ViewData["Title"] = Model.PropertyName + " - Property Details";
    Layout = "_LandingLayout";
}

<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
    <a href="/Home/Landing" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        @if (!string.IsNullOrEmpty(ViewBag.CompanyLogo))
        {
            <img src="@ViewBag.CompanyLogo" style="max-height: 50px; max-width: 200px; object-fit: contain;" alt="@ViewBag.CompanyName" />
        }
        else
        {
            <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>@ViewBag.CompanyName</h2>
        }
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="/Home/Landing#home" class="nav-item nav-link">Home</a>
            <a href="/Home/Landing#about" class="nav-item nav-link">About</a>
            <a href="/Home/Landing#projects" class="nav-item nav-link">Projects</a>
            <a href="/Home/Landing#contact" class="nav-item nav-link">Contact</a>
        </div>
        <a href="/Account/Login" class="btn btn-primary d-none d-lg-block me-4" style="padding: 10px 20px; margin-left: 20px;">Login<i class="fa fa-arrow-right ms-2"></i></a>
    </div>
</nav>
<!-- Navbar End -->

<!-- Property Details Start -->
<div class="container-xxl py-5">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Landing">Home</a></li>
                <li class="breadcrumb-item"><a href="/Home/Landing#projects">Projects</a></li>
                <li class="breadcrumb-item active">@Model.PropertyName</li>
            </ol>
        </nav>

        <div class="row g-5">
            <!-- Image Gallery -->
            <div class="col-lg-8">
                <div class="mb-4">
                    @if(Model.Images != null && Model.Images.Count > 0)
                    {
                        <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @for(int i = 0; i < Model.Images.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img class="d-block w-100" src="/Home/GetPropertyImage/@Model.Images[i]" alt="@Model.PropertyName" style="height: 400px; object-fit: cover; border-radius: 10px;">
                                    </div>
                                }
                            </div>
                            @if(Model.Images.Count > 1)
                            {
                                <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </button>
                            }
                        </div>
                        
                        <!-- Thumbnail Gallery -->
                        @if(Model.Images.Count > 1)
                        {
                            <div class="row g-2 mt-3">
                                @for(int i = 0; i < Math.Min(Model.Images.Count, 6); i++)
                                {
                                    <div class="col-2">
                                        <img class="img-fluid thumbnail-img" src="/Home/GetPropertyImage/@Model.Images[i]" 
                                             alt="@Model.PropertyName" style="height: 80px; object-fit: cover; cursor: pointer; border-radius: 5px;"
                                             onclick="goToSlide(@i)">
                                    </div>
                                }
                                @if(Model.Images.Count > 6)
                                {
                                    <div class="col-2 d-flex align-items-center justify-content-center bg-light" style="height: 80px; border-radius: 5px;">
                                        <span class="text-muted">+@(Model.Images.Count - 6) more</span>
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <img class="img-fluid w-100" src="https://via.placeholder.com/800x400/06BBCC/ffffff?text=@Uri.EscapeDataString(Model.PropertyName)" 
                             alt="@Model.PropertyName" style="height: 400px; object-fit: cover; border-radius: 10px;">
                    }
                </div>

                <!-- Property Description -->
                <div class="bg-light p-4 rounded">
                    <h3 class="mb-3">About @Model.PropertyName</h3>
                    <p class="mb-4">Experience luxury living at its finest with this premium property. Located in the heart of @(Model.Location ?? "prime location"), this development offers modern amenities, spacious layouts, and exceptional connectivity to major business districts and entertainment hubs.</p>
                    
                    <!-- Amenities -->
                    <h4 class="mb-3">Amenities & Features</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fa fa-check text-primary me-2"></i>Swimming Pool</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Gymnasium</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Children's Play Area</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Landscaped Gardens</li>
                                <li><i class="fa fa-check text-primary me-2"></i>24/7 Security</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fa fa-check text-primary me-2"></i>Power Backup</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Covered Parking</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Elevator Access</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Water Supply</li>
                                <li><i class="fa fa-check text-primary me-2"></i>Waste Management</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Property Info Sidebar -->
            <div class="col-lg-4">
                <div class="bg-primary text-white p-4 rounded mb-4">
                    <h3 class="text-white mb-3">@Model.PropertyName</h3>
                    <div class="mb-3">
                        <i class="fa fa-map-marker-alt me-2"></i>
                        <span>@Model.Location</span>
                    </div>
                    <div class="mb-3">
                        <i class="fa fa-building me-2"></i>
                        <span>@(Model.AreaSqft ?? 1200) Sqft</span>
                    </div>
                    <div class="mb-3">
                        <i class="fa fa-user-tie me-2"></i>
                        <span>By @(Model.Developer ?? "Premium Developers")</span>
                    </div>
                    <div class="mb-4">
                        <i class="fa fa-calendar me-2"></i>
                        <span>@Model.CreatedOn.ToString("MMM yyyy")</span>
                    </div>
                    <hr class="text-white">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Starting Price:</span>
                        <h4 class="text-white mb-0">₹@((Model.Price ?? 2500000).ToString("N0"))</h4>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Total Units:</span>
                        <span>@Model.FlatsCount</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span>Available:</span>
                        <span class="badge bg-light text-primary">@Model.AvailableFlats Units</span>
                    </div>
                    <button class="btn btn-light w-100 mb-2" onclick="showExpressInterestModal()">
                        <i class="fa fa-heart me-2"></i>Express Interest
                    </button>
                    <button class="btn btn-outline-light w-100" onclick="showSiteVisitModal()">
                        <i class="fa fa-calendar me-2"></i>Schedule Site Visit
                    </button>
                </div>

                <!-- Contact Info -->
                <div class="bg-light p-4 rounded">
                    <h5 class="mb-3">Contact Information</h5>
                    <div class="mb-3">
                        <i class="fa fa-phone text-primary me-2"></i>
                        <span>@(ViewBag.Settings.ContainsKey("CompanyPhone") ? ViewBag.Settings["CompanyPhone"] : "+91 9876543210")</span>
                    </div>
                    <div class="mb-3">
                        <i class="fa fa-envelope text-primary me-2"></i>
                        <span>@(ViewBag.Settings.ContainsKey("CompanyEmail") ? ViewBag.Settings["CompanyEmail"] : "info@company.com")</span>
                    </div>
                    <div class="mb-3">
                        <i class="fa fa-map-marker-alt text-primary me-2"></i>
                        <span>@(ViewBag.Settings.ContainsKey("CompanyAddress") ? ViewBag.Settings["CompanyAddress"] : "Business Address")</span>
                    </div>
                    <a href="tel:@(ViewBag.Settings.ContainsKey("CompanyPhone") ? ViewBag.Settings["CompanyPhone"] : "+919876543210")" class="btn btn-primary w-100">
                        <i class="fa fa-phone me-2"></i>Call Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Property Details End -->

<!-- Express Interest Modal -->
<div class="modal fade" id="expressInterestModal" tabindex="-1" aria-labelledby="expressInterestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title text-white" id="expressInterestModalLabel">Express Interest in @Model.PropertyName</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="expressInterestForm">
                <div class="modal-body">
                    <input type="hidden" id="expressPropertyId" value="@Model.PropertyId">
                    <input type="hidden" id="expressProjectName" value="@Model.PropertyName">
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle me-2"></i>Please fill in your details and our team will contact you within 24 hours.
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="expressName" placeholder="Your Name" required>
                                <label for="expressName">Full Name *</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="tel" class="form-control" id="expressContact" placeholder="Your Phone" required pattern="[0-9]{10}">
                                <label for="expressContact">Phone Number *</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="expressLocation" placeholder="Preferred Location" required>
                                <label for="expressLocation">Preferred Location *</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="expressBHK" required>
                                    <option value="">Select BHK</option>
                                    <option value="1BHK">1 BHK</option>
                                    <option value="2BHK">2 BHK</option>
                                    <option value="3BHK">3 BHK</option>
                                    <option value="4BHK">4 BHK</option>
                                    <option value="5BHK">5+ BHK</option>
                                </select>
                                <label for="expressBHK">BHK *</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="expressBudget" placeholder="Your Budget" required>
                                <label for="expressBudget">Budget (₹) *</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-paper-plane me-2"></i>Submit Interest
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Site Visit Modal -->
<div class="modal fade" id="siteVisitModal" tabindex="-1" aria-labelledby="siteVisitModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title text-white" id="siteVisitModalLabel">Schedule Site Visit - @Model.PropertyName</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="siteVisitForm">
                <div class="modal-body">
                    <input type="hidden" id="visitPropertyId" value="@Model.PropertyId">
                    <input type="hidden" id="visitProjectName" value="@Model.PropertyName">
                    <div class="alert alert-success">
                        <i class="fa fa-calendar-check me-2"></i>Schedule a site visit and our representative will show you around the property.
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="visitName" placeholder="Your Name" required>
                                <label for="visitName">Full Name *</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="tel" class="form-control" id="visitContact" placeholder="Your Phone" required pattern="[0-9]{10}">
                                <label for="visitContact">Phone Number *</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="visitLocation" placeholder="Preferred Location" required>
                                <label for="visitLocation">Preferred Location *</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="visitBHK" required>
                                    <option value="">Select BHK</option>
                                    <option value="1BHK">1 BHK</option>
                                    <option value="2BHK">2 BHK</option>
                                    <option value="3BHK">3 BHK</option>
                                    <option value="4BHK">4 BHK</option>
                                    <option value="5BHK">5+ BHK</option>
                                </select>
                                <label for="visitBHK">BHK *</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="visitBudget" placeholder="Your Budget" required>
                                <label for="visitBudget">Budget (₹) *</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-calendar-check me-2"></i>Schedule Visit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goToSlide(index) {
            var carousel = new bootstrap.Carousel(document.getElementById('propertyCarousel'));
            carousel.to(index);
        }

        // Show Express Interest Modal
        function showExpressInterestModal() {
            var modal = new bootstrap.Modal(document.getElementById('expressInterestModal'));
            modal.show();
        }

        // Show Site Visit Modal
        function showSiteVisitModal() {
            var modal = new bootstrap.Modal(document.getElementById('siteVisitModal'));
            modal.show();
        }

        // Submit Express Interest Form
        document.getElementById('expressInterestForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                Name: document.getElementById('expressName').value,
                Contact: document.getElementById('expressContact').value,
                PreferredLocation: document.getElementById('expressLocation').value,
                BHK: document.getElementById('expressBHK').value,
                Budget: document.getElementById('expressBudget').value,
                ProjectName: document.getElementById('expressProjectName').value,
                PropertyId: parseInt(document.getElementById('expressPropertyId').value)
            };
            
            fetch('/PublicLeads/CaptureInterest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message || 'Thank you for your interest! Our team will contact you within 24 hours.');
                    bootstrap.Modal.getInstance(document.getElementById('expressInterestModal')).hide();
                    document.getElementById('expressInterestForm').reset();
                } else {
                    alert(data.message || 'Error submitting form. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error submitting form. Please try again.');
            });
        });

        // Submit Site Visit Form
        document.getElementById('siteVisitForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                Name: document.getElementById('visitName').value,
                Contact: document.getElementById('visitContact').value,
                PreferredLocation: document.getElementById('visitLocation').value,
                BHK: document.getElementById('visitBHK').value,
                Budget: document.getElementById('visitBudget').value,
                ProjectName: document.getElementById('visitProjectName').value,
                PropertyId: parseInt(document.getElementById('visitPropertyId').value)
            };
            
            fetch('/PublicLeads/CaptureSiteVisit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message || 'Site visit scheduled! Our team will confirm the date and time soon.');
                    bootstrap.Modal.getInstance(document.getElementById('siteVisitModal')).hide();
                    document.getElementById('siteVisitForm').reset();
                } else {
                    alert(data.message || 'Error scheduling visit. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error scheduling visit. Please try again.');
            });
        });
    </script>
}