<!-- Projects Start -->
<div class="container-xxl py-5" id="projects">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Projects</h6>
            <h1 class="mb-5">Our Featured Projects</h1>
        </div>
        <div class="row g-4 justify-content-center">
            @if (ViewBag.Properties != null)
            {
                @foreach (var property in ViewBag.Properties)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="course-item bg-light">
                            <div class="position-relative overflow-hidden">
                                @if (property.Images != null && property.Images.Count > 0)
                                {
                                    @if (property.Images.Count == 1)
                                    {
                                        <img class="img-fluid" src="/Home/GetPropertyImage/@property.Images[0]" alt="@property.PropertyName" style="height: 250px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div id="carousel@(property.PropertyId)" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                @for (int i = 0; i < property.Images.Count; i++)
                                                {
                                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                                        <img class="img-fluid w-100" src="/Home/GetPropertyImage/@property.Images[i]" alt="@property.PropertyName" style="height: 250px; object-fit: cover;">
                                                    </div>
                                                }
                                            </div>
                                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel@(property.PropertyId)" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon"></span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#carousel@(property.PropertyId)" data-bs-slide="next">
                                                <span class="carousel-control-next-icon"></span>
                                            </button>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <img class="img-fluid" src="https://via.placeholder.com/400x300/06BBCC/ffffff?text=@Uri.EscapeDataString(property.PropertyName)" alt="@property.PropertyName" style="height: 250px; object-fit: cover;">
                                }
                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                    <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;" onclick="showInterestForm('@property.PropertyName')">Show Interest</a>
                                    <a href="/Home/ProjectDetails/@property.PropertyId" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Learn More</a>
                                </div>
                            </div>
                            <div class="text-center p-4 pb-0">
                                <h3 class="mb-0">â‚¹@(property.MinPrice.ToString("N0"))</h3>
                                <div class="mb-3">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small>(@property.FlatsCount)</small>
                                </div>
                                <h5 class="mb-4">@property.PropertyName</h5>
                            </div>
                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-map-marker-alt text-primary me-2"></i>@(property.Location ?? "Location")</small>
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-building text-primary me-2"></i>@(property.AreaSqft ?? 0) Sqft</small>
                                <small class="flex-fill text-center py-2"><i class="fa fa-home text-primary me-2"></i>@property.AvailableFlats Available</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
