@model CRM.Models.EmailSettingModel
@{
    ViewData["Title"] = "Email Settings";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Email Settings</h5>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#smtpModal">
                        <i class="fas fa-cog me-1"></i> Configure SMTP
                    </button>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            SMTP configured for <strong>@Model.SmtpFrom</strong>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tr>
                                    <th width="200">SMTP Host</th>
                                    <td>@Model.SmtpHost</td>
                                </tr>
                                <tr>
                                    <th>SMTP Port</th>
                                    <td>@Model.SmtpPort</td>
                                </tr>
                                <tr>
                                    <th>SSL Enabled</th>
                                    <td>@(Model.EnableSsl ? "Yes" : "No")</td>
                                </tr>
                                <tr>
                                    <th>Last Updated</th>
                                    <td>@(Model.UpdatedOn?.ToString("dd MMM yyyy hh:mm tt") ?? Model.CreatedOn.ToString("dd MMM yyyy hh:mm tt"))</td>
                                </tr>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            No SMTP settings configured. Click "Configure SMTP" to set up email.
                        </div>
                    }

                    @if (ViewBag.Role == "Admin")
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Admin:</strong> Your email settings will apply to all agents without their own configuration.
                        </div>
                    }
                    else if (ViewBag.Role == "Partner")
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Partner:</strong> Your email settings will apply to your agents only.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SMTP Configuration Modal -->
<div class="modal fade" id="smtpModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configure SMTP Settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="smtpForm">
                    <div class="mb-3">
                        <label class="form-label">From Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="smtpFrom" value="@Model?.SmtpFrom" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="smtpPassword" value="@Model?.SmtpPassword" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                        <small class="text-muted">For Gmail, use App Password</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveSmtp()">Save Settings</button>
            </div>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 576px) {
        .modal-dialog {
            margin: 0.5rem;
        }
        .card-header {
            flex-direction: column;
            gap: 10px;
        }
        .card-header .btn {
            width: 100%;
        }
    }
</style>

<script>
    function togglePassword() {
        const input = document.getElementById('smtpPassword');
        const icon = document.getElementById('toggleIcon');
        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }

    function saveSmtp() {
        const from = document.getElementById('smtpFrom').value;
        const password = document.getElementById('smtpPassword').value;

        if (!from || !password) {
            alert('Please fill all fields');
            return;
        }

        fetch('/EmailSettings/SaveSmtp', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: `smtpFrom=${encodeURIComponent(from)}&smtpPassword=${encodeURIComponent(password)}`
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            }
        });
    }
</script>
