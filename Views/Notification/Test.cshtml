@{
    ViewData["Title"] = "Notification Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Notification System Test</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Instructions:</strong>
                        <ul>
                            <li>Use these buttons to test the notification system</li>
                            <li>Check the notification bell in the top navigation after creating notifications</li>
                            <li>Only admins can create test notifications for agents</li>
                        </ul>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Create Test Notifications</h5>
                            
                            <button type="button" class="btn btn-primary mb-2" onclick="createTestNotification()">
                                Create Test Notification for Me
                            </button>
                            <br>
                            
                            <div class="form-group">
                                <label>Agent ID:</label>
                                <input type="number" id="agentId" class="form-control" placeholder="Enter Agent User ID" value="2">
                                <small class="text-muted">Enter the UserId of the agent you want to test</small>
                            </div>
                            
                            <button type="button" class="btn btn-success mb-2" onclick="createAgentTestNotifications()">
                                Create Test Notifications for Agent
                            </button>
                            <br>
                            
                            <button type="button" class="btn btn-warning mb-2" onclick="clearAllNotifications()">
                                Clear All Notifications (Admin Only)
                            </button>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>Current Notifications</h5>
                            <button type="button" class="btn btn-info mb-2" onclick="loadNotifications()">
                                Refresh Notifications
                            </button>
                            
                            <div id="notificationsList" class="mt-3">
                                <!-- Notifications will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>User Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Current User:</strong> @User.Identity.Name</p>
                    <p><strong>Role:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</p>
                    <p><strong>User ID:</strong> @User.FindFirst("UserId")?.Value</p>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Quick SQL Check</h5>
                </div>
                <div class="card-body">
                    <p>Run this SQL to see all users:</p>
                    <code>SELECT UserId, Username, Role FROM Users;</code>
                    
                    <p class="mt-2">Run this SQL to see notifications:</p>
                    <code>SELECT * FROM Notifications ORDER BY CreatedOn DESC;</code>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function createTestNotification() {
    $.post('/Notification/CreateTestNotification', function(response) {
        if (response.success) {
            alert('Test notification created successfully!');
            loadNotifications();
        } else {
            alert('Error: ' + response.message);
        }
    });
}

function createAgentTestNotifications() {
    const agentId = $('#agentId').val();
    if (!agentId) {
        alert('Please enter an Agent ID');
        return;
    }
    
    $.post('/Notification/CreateAgentTestNotifications', { agentId: agentId }, function(response) {
        if (response.success) {
            alert('Test notifications created for agent ' + agentId + '!');
            loadNotifications();
        } else {
            alert('Error: ' + response.message);
        }
    });
}

function clearAllNotifications() {
    if (confirm('Are you sure you want to clear ALL notifications? This cannot be undone.')) {
        $.post('/Notification/ClearAllNotifications', function(response) {
            if (response.success) {
                alert('All notifications cleared successfully!');
                loadNotifications();
            } else {
                alert('Error: ' + response.message);
            }
        });
    }
}

function loadNotifications() {
    $.get('/Notification/GetNotifications', function(response) {
        if (response.success) {
            let html = '<div class="list-group">';
            if (response.notifications.length === 0) {
                html += '<div class="list-group-item">No notifications found</div>';
            } else {
                response.notifications.forEach(function(notification) {
                    const priorityClass = notification.priority === 'High' ? 'border-danger' : 
                                        notification.priority === 'Medium' ? 'border-warning' : 'border-info';
                    html += `
                        <div class="list-group-item ${priorityClass}">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">${notification.title}</h6>
                                <small>${notification.createdOn}</small>
                            </div>
                            <p class="mb-1">${notification.message}</p>
                            <small>Type: ${notification.type} | Priority: ${notification.priority}</small>
                        </div>
                    `;
                });
            }
            html += '</div>';
            html += `<p class="mt-2"><strong>Total Unread:</strong> ${response.count}</p>`;
            $('#notificationsList').html(html);
        } else {
            $('#notificationsList').html('<div class="alert alert-danger">Error loading notifications: ' + response.message + '</div>');
        }
    });
}

// Load notifications on page load
$(document).ready(function() {
    loadNotifications();
});
</script>