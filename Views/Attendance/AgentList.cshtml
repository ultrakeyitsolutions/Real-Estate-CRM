<div class="container-fluid p-0">
    <!-- Modern Header with Gradient -->
    <div class="modern-header mb-4">
        <div class="header-content p-4">
            <h1 class="header-title">
                <i class="fa-solid fa-calendar-check me-2"></i>Agent Attendance Overview
            </h1>
            <p class="header-subtitle">
                @(currentMonth.HasValue ? currentMonth.Value.ToString("MMMM yyyy") : DateTime.Now.ToString("MMMM yyyy")) - Monitor agent attendance and performance
            </p>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stats-card">
                    <div class="stats-number">@(agentStats?.Count ?? 0)</div>
                    <div class="stats-label">Total Agents</div>
                </div>
                <div class="stats-card">
                    <div class="stats-number">@(workingDays ?? 0)</div>
                    <div class="stats-label">Working Days</div>
                </div>
                <div class="stats-card">
                    <div class="stats-number">
                        @{
                            var avgAttendance = agentStats?.Any() == true ? agentStats.Average(a => (double)a.AttendancePercentage) : 0;
                        }
                        @avgAttendance.ToString("F1")%
                    </div>
                    <div class="stats-label">Avg Attendance</div>
                </div>
                <div class="stats-card">
                    <div class="stats-number">@(currentMonth.HasValue ? currentMonth.Value.ToString("MMM") : DateTime.Now.ToString("MMM"))</div>
                    <div class="stats-label">Current Month</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-card">
        <div class="row g-3">
            <div class="col-md-6">
                <label for="searchInput" class="form-label fw-semibold">Search</label>
                <div class="input-group">
                   
                    <input type="text" id="searchInput" class="form-control border-start-0 ps-0" placeholder="Search by name, email...">
                </div>
            </div>
            <div class="col-md-3">
                <label for="roleFilter" class="form-label fw-semibold">Role</label>
                <select id="roleFilter" class="form-select">
                    <option value="">üîç All Roles</option>
                    <option value="Agent">üë§ Agent</option>
                    <option value="Sales">üíº Sales</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="attendanceFilter" class="form-label fw-semibold">Performance</label>
                <select id="attendanceFilter" class="form-select">
                    <option value="">üîç All Performance</option>
                    <option value="excellent">üü¢ Excellent (90%+)</option>
                    <option value="good">üîµ Good (75-89%)</option>
                    <option value="average">üü° Average (60-74%)</option>
                    <option value="poor">üî¥ Poor (&lt;60%)</option>
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <button type="button" class="btn btn-outline-primary" id="clearFilters">
                    <i class="fa-solid fa-refresh me-1"></i>Clear Filters
                </button>
            </div>
        </div>
    </div>

    <!-- Agent Cards - Full Width -->
    <div id="agentCardsContainer">
        @if (agentStats != null && agentStats.Any())
        {
            foreach (var stat in agentStats)
            {
                var agent = stat.Agent;
                var percentage = (double)stat.AttendancePercentage;
                var progressColor = percentage >= 90 ? "#10b981" : percentage >= 75 ? "#3b82f6" : percentage >= 60 ? "#f59e0b" : "#ef4444";
                var performanceBadge = percentage >= 90 ? "Excellent" : percentage >= 75 ? "Good" : percentage >= 60 ? "Average" : "Poor";
                var badgeClass = percentage >= 90 ? "attendance-excellent" : percentage >= 75 ? "attendance-good" : percentage >= 60 ? "attendance-average" : "attendance-poor";
                var performanceClass = percentage >= 90 ? "excellent" : percentage >= 75 ? "good" : percentage >= 60 ? "average" : "poor";
                
                <div class="agent-card agent-card-wrapper" 
                     data-name="@agent.Username.ToLower()" 
                     data-email="@(agent.Email?.ToLower() ?? "")"
                     data-role="@agent.Role" 
                     data-attendance="@percentage"
                     data-performance="@performanceClass"
                     onclick="window.location.href='@Url.Action("Calendar", "Attendance", new { agentId = agent.UserId })'">
                    <div class="row align-items-center">
                        <!-- Column 1: Agent Info -->
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-2">
                                @if (!string.IsNullOrEmpty(stat.ProfileImage))
                                {
                                    <img src="@stat.ProfileImage" alt="@agent.Username" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover; border: 2px solid #f0f0f0;">
                                }
                                else
                                {
                                    <div class="rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-weight: 600; font-size: 1.3rem; border: 2px solid #f0f0f0;">
                                        @agent.Username.Substring(0, 1).ToUpper()
                                    </div>
                                }
                                <div>
                                    <div class="agent-name mb-1">@agent.Username</div>
                                    <span class="role-badge">
                                        <i class="fas fa-user-tag me-1"></i>@agent.Role
                                    </span>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(agent.Email))
                            {
                                <div class="agent-info">
                                    <i class="fas fa-envelope"></i>
                                    <span>@agent.Email</span>
                                </div>
                            }
                        </div>

                        <!-- Column 2: Attendance Progress -->
                        <div class="col-md-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span style="font-weight: 600; color: #64748b; font-size: 0.875rem;">Attendance Rate</span>
                                <span style="font-weight: 700; font-size: 1.1rem; color: @progressColor;">@percentage.ToString("F1")%</span>
                            </div>
                            <div class="progress mb-2" style="height: 10px;">
                                <div class="progress-bar" role="progressbar" style="width: @(percentage)%; background-color: @progressColor;" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="row g-2 text-center">
                                <div class="col-4">
                                    <div style="font-size: 0.75rem; color: #6b7280; margin-bottom: 2px;">Present</div>
                                    <div style="font-size: 1.1rem; font-weight: 700; color: #16a34a;">@stat.PresentDays</div>
                                </div>
                                <div class="col-4">
                                    <div style="font-size: 0.75rem; color: #6b7280; margin-bottom: 2px;">Absent</div>
                                    <div style="font-size: 1.1rem; font-weight: 700; color: #dc2626;">@stat.AbsentDays</div>
                                </div>
                                <div class="col-4">
                                    <div style="font-size: 0.75rem; color: #6b7280; margin-bottom: 2px;">Total</div>
                                    <div style="font-size: 1.1rem; font-weight: 700; color: #2563eb;">@stat.WorkingDays</div>
                                </div>
                            </div>
                        </div>

                        <!-- Column 3: Performance Badge & Action -->
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <span class="attendance-badge @badgeClass">
                                        @performanceBadge
                                    </span>
                                </div>
                                <div class="text-end">
                                    <div class="d-flex align-items-center text-primary" style="font-weight: 500; font-size: 0.9rem;">
                                        <i class="fas fa-calendar-alt me-2"></i>
                                        View Calendar
                                        <i class="fas fa-arrow-right ms-2"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users"></i>
                <h3>No Agents Found</h3>
                <p class="text-muted">There are no agents or sales users to display.</p>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="pagination-wrapper mt-4" id="paginationWrapper" style="display: none;">
        <div class="row align-items-center">
            <div class="col-md-6">
                <p class="text-muted mb-0">Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalRecords">0</span> entries</p>
            </div>
            <div class="col-md-6">
                <nav>
                    <ul class="pagination justify-content-end mb-0" id="pagination">
                        <!-- Pagination will be generated by JavaScript -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Initializing Agent List...');
            
            let allCards = [];
            let filteredCards = [];
        let currentPage = 1;
        const pageSize = 10;

        // Store original cards HTML
        function initializeCards() {
            allCards = [];
            $('.agent-card-wrapper').each(function() {
                const $card = $(this);
                allCards.push({
                    html: $card[0].outerHTML,
                    name: $card.data('name') || '',
                    email: $card.data('email') || '',
                    role: $card.data('role') || '',
                    performance: $card.data('performance') || ''
                });
            });
            console.log('Total cards found:', allCards.length);
            filteredCards = [...allCards];
            renderPage();
        }

        // Filter cards
        function filterCards() {
            const searchTerm = $('#searchInput').val().toLowerCase().trim();
            const roleFilter = $('#roleFilter').val();
            const attendanceFilter = $('#attendanceFilter').val();

            console.log('Filtering:', { searchTerm, roleFilter, attendanceFilter });

            filteredCards = allCards.filter(card => {
                const matchesSearch = !searchTerm || 
                    card.name.includes(searchTerm) || 
                    card.email.includes(searchTerm);
                const matchesRole = !roleFilter || card.role === roleFilter;
                const matchesAttendance = !attendanceFilter || card.performance === attendanceFilter;

                return matchesSearch && matchesRole && matchesAttendance;
            });

            console.log('Filtered cards:', filteredCards.length);
            currentPage = 1;
            renderPage();
        }

        // Render current page
        function renderPage() {
            const container = $('#agentCardsContainer');
            container.empty();

            if (filteredCards.length === 0) {
                container.html(`
                    <div class="empty-state">
                        <i class="fas fa-users"></i>
                        <h3>No Agents Found</h3>
                        <p class="text-muted">No agents match your current filters.</p>
                    </div>
                `);
                $('#paginationWrapper').hide();
                return;
            }

            const start = (currentPage - 1) * pageSize;
            const end = start + pageSize;
            const pageCards = filteredCards.slice(start, end);

            pageCards.forEach(card => {
                container.append(card.html);
            });

            updatePaginationInfo();
            renderPagination();
            
            if (filteredCards.length > pageSize) {
                $('#paginationWrapper').show();
            } else {
                $('#paginationWrapper').hide();
            }
        }

        // Update pagination info
        function updatePaginationInfo() {
            const start = (currentPage - 1) * pageSize + 1;
            const end = Math.min(currentPage * pageSize, filteredCards.length);
            $('#showingStart').text(start);
            $('#showingEnd').text(end);
            $('#totalRecords').text(filteredCards.length);
        }

        // Render pagination buttons
        function renderPagination() {
            const totalPages = Math.ceil(filteredCards.length / pageSize);
            const pagination = $('#pagination');
            pagination.empty();

            if (totalPages <= 1) return;

            // Previous button
            pagination.append(`
                <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" data-page="${currentPage - 1}">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `);

            // Page numbers
            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(totalPages, currentPage + 2);

            if (startPage > 1) {
                pagination.append(`<li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="#" data-page="${i}">${i}</a>
                    </li>
                `);
            }

            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    pagination.append(`<li class="page-item disabled"><span class="page-link">...</span></li>`);
                }
                pagination.append(`<li class="page-item"><a class="page-link" href="#" data-page="${totalPages}">${totalPages}</a></li>`);
            }

            // Next button
            pagination.append(`
                <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" data-page="${currentPage + 1}">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `);

            // Attach click handlers
            pagination.find('a.page-link').off('click').on('click', function(e) {
                e.preventDefault();
                const page = parseInt($(this).data('page'));
                if (page && page !== currentPage && page >= 1 && page <= totalPages) {
                    currentPage = page;
                    renderPage();
                    $('html, body').animate({ scrollTop: $('#agentCardsContainer').offset().top - 100 }, 300);
                }
            });
        }

        // Event handlers
        $('#searchInput').on('keyup', function() {
            console.log('Search input changed:', $(this).val());
            filterCards();
        });
        
        $('#roleFilter').on('change', function() {
            console.log('Role filter changed:', $(this).val());
            filterCards();
        });
        
        $('#attendanceFilter').on('change', function() {
            console.log('Attendance filter changed:', $(this).val());
            filterCards();
        });

        $('#clearFilters').on('click', function() {
            console.log('Clearing filters');
            $('#searchInput').val('');
            $('#roleFilter').val('');
            $('#attendanceFilter').val('');
            filterCards();
