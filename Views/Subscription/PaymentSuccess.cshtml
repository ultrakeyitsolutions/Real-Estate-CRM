@{
    ViewData["Title"] = "Payment Success";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            @ViewBag.Error
                        </div>
                    }
                    else if (ViewBag.Status == "Success")
                    {
                        <div class="text-success mb-3">
                            <i class="fas fa-check-circle fa-3x"></i>
                        </div>
                        <h2 class="text-success">Payment Successful!</h2>
                        <p class="lead">Thank you for your payment. Your subscription has been activated.</p>
                        
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Payment ID:</strong><br>
                                    <code>@ViewBag.PaymentId</code>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Order ID:</strong><br>
                                    <code>@ViewBag.OrderId</code>
                                </div>
                            </div>
                            @if (ViewBag.Amount != null)
                            {
                                <div class="row mt-3">
                                    <div class="col-sm-6">
                                        <strong>Amount:</strong><br>
                                        â‚¹@ViewBag.Amount
                                    </div>
                                    <div class="col-sm-6">
                                        <strong>Plan:</strong><br>
                                        @ViewBag.PlanName
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="mt-4">
                            <a href="/Subscription/MyPlan" class="btn btn-primary">View My Plan</a>
                            <a href="/Dashboard" class="btn btn-secondary">Go to Dashboard</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-warning mb-3">
                            <i class="fas fa-clock fa-3x"></i>
                        </div>
                        <h2 class="text-warning">Payment Processing</h2>
                        <p class="lead">Your payment is being processed. Please wait a moment...</p>
                        
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Payment ID:</strong><br>
                                    <code>@ViewBag.PaymentId</code>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Order ID:</strong><br>
                                    <code>@ViewBag.OrderId</code>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button onclick="location.reload()" class="btn btn-primary">Refresh Status</button>
                            <a href="/Subscription/MyPlan" class="btn btn-secondary">View My Plan</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Auto-refresh if payment is processing
    @if (ViewBag.Status != "Success" && ViewBag.Error == null)
    {
        <text>
        setTimeout(function() {
            location.reload();
        }, 5000); // Refresh every 5 seconds
        </text>
    }
</script>
</body>
</html>