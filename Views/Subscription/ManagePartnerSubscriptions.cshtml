@model List<CRM.Models.PartnerSubscriptionModel>
@{
    ViewData["Title"] = "Manage Partner Subscriptions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Active Partner Subscriptions</h5>
                </div>
                <div class="card-body">
                    <!-- Search and Filters -->
                    <form method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="search" id="searchInput" value="@ViewBag.Search" placeholder="Search partner name...">
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="plan" onchange="autoSubmitForm()">
                                    <option value="">All Plans</option>
                                    @if (ViewBag.Plans != null)
                                    {
                                        @foreach (var plan in ViewBag.Plans)
                                        {
                                            <option value="@plan.PlanId" selected="@(ViewBag.SelectedPlan == plan.PlanId.ToString())">@plan.PlanName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="billing" onchange="autoSubmitForm()">
                                    <option value="">All Billing</option>
                                    <option value="Monthly" selected="@(ViewBag.SelectedBilling == "Monthly")">Monthly</option>
                                    <option value="Annual" selected="@(ViewBag.SelectedBilling == "Annual")">Annual</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input type="date" class="form-control" name="fromDate" value="@ViewBag.FromDate" onchange="autoSubmitForm()" placeholder="From Date">
                            </div>
                            <div class="col-md-2">
                                <input type="date" class="form-control" name="toDate" value="@ViewBag.ToDate" onchange="autoSubmitForm()" placeholder="To Date">
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary w-100">Filter</button>
                            </div>
                        </div>
                    </form>
                    
                    <!-- Desktop Table View -->
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Partner</th>
                                    <th>Plan</th>
                                    <th>Billing</th>
                                    <th>Amount</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    @foreach (var subscription in Model)
                                    {
                                        <tr>
                                            <td>@subscription.ChannelPartner?.CompanyName</td>
                                            <td>
                                                @if (subscription.Plan != null)
                                                {
                                                    @subscription.Plan.PlanName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Plan</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(subscription.BillingCycle) && subscription.BillingCycle != "No Plan")
                                                {
                                                    @subscription.BillingCycle
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (subscription.Amount > 0)
                                                {
                                                    <span>₹@subscription.Amount.ToString("N2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">₹0.00</span>
                                                }
                                            </td>
                                            <td>
                                                @if (subscription.StartDate != DateTime.MinValue)
                                                {
                                                    @subscription.StartDate.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (subscription.EndDate != DateTime.MinValue)
                                                {
                                                    @subscription.EndDate.ToString("dd/MM/yyyy")
                                                    @if (subscription.Status == "Active" && subscription.EndDate <= DateTime.Now)
                                                    {
                                                        <br><small class="text-danger">Expired</small>
                                                    }
                                                    else if (subscription.Status == "Active" && subscription.EndDate <= DateTime.Now.AddDays(7))
                                                    {
                                                        <br><small class="text-warning">Expiring Soon</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (subscription.Status == "Active" && subscription.EndDate > DateTime.Now)
                                                {
                                                    <button class="btn btn-sm btn-primary" onclick="openUpgradeModal(@subscription.ChannelPartnerId)">
                                                        <i class="fa-solid fa-rocket me-1"></i>Upgrade
                                                    </button>
                                                }
                                                else if (subscription.Status == "No Plan" || subscription.Status == "Expired" || subscription.Status == "Cancelled" || (subscription.Status == "Active" && subscription.EndDate <= DateTime.Now))
                                                {
                                                    <button class="btn btn-sm btn-success" onclick="openUpgradeModal(@subscription.ChannelPartnerId)">
                                                        <i class="fa-solid fa-plus me-1"></i>Assign Plan
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-primary" onclick="openUpgradeModal(@subscription.ChannelPartnerId)">
                                                        <i class="fa-solid fa-rocket me-1"></i>Manage
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No active subscriptions found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Mobile Card View -->
                    <div class="mobile-cards">
                        @if (Model?.Any() == true)
                        {
                            @foreach (var subscription in Model)
                            {
                                <div class="subscription-card">
                                    <div class="partner-name">@subscription.ChannelPartner?.CompanyName</div>
                                    <div class="plan-info">
                                        <span>
                                            <strong>
                                                @if (subscription.Plan != null)
                                                {
                                                    @subscription.Plan.PlanName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Plan</span>
                                                }
                                            </strong>
                                        </span>
                                        <span class="amount">
                                            @if (subscription.Amount > 0)
                                            {
                                                <span>₹@subscription.Amount.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">₹0.00</span>
                                            }
                                        </span>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Billing:</small><br>
                                            <span>
                                                @if (!string.IsNullOrEmpty(subscription.BillingCycle) && subscription.BillingCycle != "No Plan")
                                                {
                                                    @subscription.BillingCycle
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">End Date:</small><br>
                                            <span>
                                                @if (subscription.EndDate != DateTime.MinValue)
                                                {
                                                    @subscription.EndDate.ToString("dd/MM/yyyy")
                                                    @if (subscription.Status == "Active" && subscription.EndDate <= DateTime.Now)
                                                    {
                                                        <br><small class="text-danger">Expired</small>
                                                    }
                                                    else if (subscription.Status == "Active" && subscription.EndDate <= DateTime.Now.AddDays(7))
                                                    {
                                                        <br><small class="text-warning">Expiring Soon</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        @if (subscription.Status == "Active" && subscription.EndDate > DateTime.Now)
                                        {
                                            <button class="btn btn-sm btn-primary w-100" onclick="openUpgradeModal(@subscription.ChannelPartnerId)">
                                                <i class="fa-solid fa-rocket me-1"></i>Upgrade Plan
                                            </button>
                                        }
                                        else if (subscription.Status == "No Plan" || subscription.Status == "Expired" || subscription.Status == "Cancelled" || (subscription.Status == "Active" && subscription.EndDate <= DateTime.Now))
                                        {
                                            <button class="btn btn-sm btn-success w-100" onclick="openUpgradeModal(@subscription.ChannelPartnerId)">
                                                <i class="fa-solid fa-plus me-1"></i>Assign Plan
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-primary w-100" onclick="openUpgradeModal(@subscription.ChannelPartnerId)">
                                                <i class="fa-solid fa-rocket me-1"></i>Manage Plan
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted">No active subscriptions found</p>
                            </div>
                        }
                    </div>
                    
                    <!-- Pagination -->
                    @if (ViewBag.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search&plan=@ViewBag.SelectedPlan&billing=@ViewBag.SelectedBilling&fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">Previous</a>
                                    </li>
                                }
                                
                                @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i&search=@ViewBag.Search&plan=@ViewBag.SelectedPlan&billing=@ViewBag.SelectedBilling&fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">@i</a>
                                    </li>
                                }
                                
                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search&plan=@ViewBag.SelectedPlan&billing=@ViewBag.SelectedBilling&fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
