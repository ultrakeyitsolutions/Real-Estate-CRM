@model CRM.Models.RevenueModel
@{
    ViewData["Title"] = "Delete Revenue";
}
<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Delete Revenue</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this revenue entry?</p>
            <dl class="row">
                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>
                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">â‚¹@Model.Amount.ToString("N0")</dd>
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy")</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="RevenueId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="/Revenue/Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
