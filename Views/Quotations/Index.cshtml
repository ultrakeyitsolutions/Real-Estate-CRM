    </div>

    <!-- Quotations List -->
    @if (Model.Any())
    {
        <div class="row" id="quotationsList">
            @foreach (var quotation in Model)
            {
                var lead = leads.FirstOrDefault(l => l.LeadId == quotation.LeadId);
                var property = properties.FirstOrDefault(p => p.PropertyId == quotation.PropertyId);
                var flat = quotation.FlatId.HasValue ? flats.FirstOrDefault(f => f.FlatId == quotation.FlatId) : null;

                <div class="col-12 paginated-item">
                    <div class="card quotation-card" data-quotation-id="@quotation.QuotationId">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Quotation Info -->
                                <div class="col-md-5">
                                    <h5 class="mb-2">
                                        <i class="fa-solid fa-file-invoice text-primary me-2"></i>
                                        @quotation.QuotationNumber
                                    </h5>
                                    <span class="quotation-notes" style="display:none;">@quotation.Notes</span>
                                    <p class="text-muted mb-1">
                                        <i class="fa-solid fa-user me-2"></i>
                                        <strong>@(lead?.Name ?? "Unknown Lead")</strong>
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fa-solid fa-building me-2"></i>
                                        @(property?.PropertyName ?? "Unknown Property")
                                        @if (flat != null)
                                        {
                                            <span> - @flat.FlatName (@flat.BHK)</span>
                                        }
                                    </p>
                                    <small class="text-muted">
                                        <i class="fa-solid fa-calendar me-1"></i>
                                        @quotation.QuotationDate.ToString("MMM dd, yyyy")
                                        @if (quotation.ValidUntil.HasValue)
                                        {
                                            <span class="ms-2">| Valid until: @quotation.ValidUntil.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                    </small>
                                </div>

                                <!-- Amount -->
                                <div class="col-md-3 text-center my-3 my-md-0">
                                    <div>
                                        <small class="text-muted d-block">Grand Total</small>
                                        <h4 class="text-primary mb-0">₹@quotation.GrandTotal.ToString("N0")</h4>
                                        @if (quotation.DiscountAmount > 0)
                                        {
                                            <small class="text-success">
                                                <i class="fa-solid fa-tag"></i> ₹@quotation.DiscountAmount.ToString("N0") off
                                            </small>
                                        }
                                    </div>
                                </div>

                                <!-- Status -->
                                <div class="col-md-2 text-center my-3 my-md-0">
                                    <span class="status-badge status-@quotation.Status.ToLower()">
                                        @quotation.Status
                                    </span>
                                </div>

                                <!-- Actions -->
                                <div class="col-md-2  gap-2 text-end">
                                    <div class="btn-group gap-2 justify-content-end">
                                        <a href="/Quotations/Details/@quotation.QuotationId" 
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa-solid fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="/Quotations/Details/@quotation.QuotationId">
                                                <i class="fa-solid fa-download me-2"></i>Download PDF</a></li>
                                            @if (canEdit)
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item status-action" href="#" data-quotation-id="@quotation.QuotationId" data-status="Sent">
                                                    <i class="fa-solid fa-paper-plane me-2"></i>Mark as Sent</a></li>
                                                <li><a class="dropdown-item status-action" href="#" data-quotation-id="@quotation.QuotationId" data-status="Accepted">
                                                    <i class="fa-solid fa-check me-2"></i>Mark as Accepted</a></li>
                                                <li><a class="dropdown-item status-action" href="#" data-quotation-id="@quotation.QuotationId" data-status="Rejected">
                                                    <i class="fa-solid fa-times me-2"></i>Mark as Rejected</a></li>
                                            }
                                            @if (canDelete)
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger delete-action" href="#" data-quotation-id="@quotation.QuotationId">
                                                    <i class="fa-solid fa-trash me-2"></i>Delete</a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Pagination -->
        <div id="pagination-container" class="mt-4"></div>
    }
    else
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; color: #dee2e6;">
                <i class="fa-solid fa-file-invoice"></i>
            </div>
            <h4 class="text-muted mt-3">No Quotations Found</h4>
            <p class="text-muted">Create your first quotation to get started</p>
@if (canCreate)
{
    <a href="/Quotations/Create" class="btn btn-primary create-btn mt-3">
        <i class="fa-solid fa-plus me-2"></i>Create Quotation
    </a>
}
        </div>
    }
</div>

<script>
    function applyFilters() {
        const search = $('#searchInput').val().toLowerCase();
        const status = $('#statusFilter').val();
        $('#quotationsList .quotation-card').each(function() {
            var card = $(this);
            var cardText = card.text().toLowerCase();
            var badge = card.find('.status-badge').text().trim();
            var matchesSearch = !search || cardText.includes(search);
            var matchesStatus = !status || badge.toLowerCase() === status.toLowerCase();
            if (matchesSearch && matchesStatus) {
                card.closest('.col-12').show();
            } else {
                card.closest('.col-12').hide();
            }
        });
    }

    // Initialize when page is fully loaded
    window.addEventListener('load', function() {
        // Set initial status filter value
        document.getElementById('statusFilter').value = '@ViewBag.StatusFilter';
        
        // Real-time search
        document.getElementById('searchInput').addEventListener('input', applyFilters);
        
        // Status filter change
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        
        // Enter key search
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.which === 13 || e.keyCode === 13) {
                applyFilters();
            }
        });
        
        // Apply filters on page load
        setTimeout(applyFilters, 100);
        
        // Event delegation for status actions
        $(document).on('click', '.status-action', function(e) {
            e.preventDefault();
            var quotationId = $(this).data('quotation-id');
            var status = $(this).data('status');
            updateStatus(quotationId, status);
        });
        
        $(document).on('click', '.delete-action', function(e) {
            e.preventDefault();
            var quotationId = $(this).data('quotation-id');
            deleteQuotation(quotationId);
        });
    });

