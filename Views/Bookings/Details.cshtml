@model CRM.Models.BookingModel
@{
    ViewData["Title"] = "Booking Details";
    var lead = Model.Lead;
    var property = Model.Property;
    var flat = Model.Flat;
    var documents = ViewBag.Documents as List<CRM.Models.BookingDocumentModel> ?? new List<CRM.Models.BookingDocumentModel>();
    var paymentPlan = ViewBag.PaymentPlan as CRM.Models.PaymentPlanModel;
    var installments = ViewBag.Installments as List<CRM.Models.PaymentInstallmentModel> ?? new List<CRM.Models.PaymentInstallmentModel>();
    
    var companyName = ViewBag.CompanyName?.ToString() ?? "Company Name";
    var companyAddress = ViewBag.CompanyAddress?.ToString() ?? "Company Address";
    var companyPhone = ViewBag.CompanyPhone?.ToString() ?? "Phone";
    var companyEmail = ViewBag.CompanyEmail?.ToString() ?? "Email";
    var companyGst = ViewBag.CompanyGST?.ToString() ?? "GST Number";
}

<style>
    .booking-container {
        max-width: 1000px;
        margin: 0 auto;
        background: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .dark-mode .booking-container {
        background: #222639 !important;
        box-shadow: 0 4px 20px rgba(255, 255, 255, 0.05) !important;
    }

    .action-bar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .action-bar .btn {
        margin-left: 0.5rem;
    }

    .print-section {
        padding: 3rem;
    }

    .dark-mode .print-section {
        background: #222639 !important;
        color: #e4e6eb !important;
    }

    .company-header {
        text-align: center;
        border-bottom: 3px solid #667eea;
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

    .company-header h1 {
        color: #667eea;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .dark-mode .company-header h1 {
        color: #667eea !important;
    }

    .dark-mode .company-header p {
        color: #e4e6eb !important;
    }

    .booking-number {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
    }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .status-pending { background-color: #fff3cd; color: #997404; }
    .status-confirmed { background-color: #d1e7dd; color: #0a3622; }
    .status-cancelled { background-color: #f8d7da; color: #842029; }
    .status-completed { background-color: #cfe2ff; color: #084298; }

    .info-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .info-box h5 {
        color: #667eea;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .info-box p {
        margin-bottom: 0.5rem;
        color: #333;
    }

    .dark-mode .info-box p {
        color: #e4e6eb !important;
    }

    .property-details, .payment-details, .documents-section, .payment-plan-section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .dark-mode .property-details,
    .dark-mode .payment-details,
    .dark-mode .documents-section,
    .dark-mode .payment-plan-section {
        background: #2c3049 !important;
    }

    .property-details h5, .payment-details h5, .documents-section h5, .payment-plan-section h5 {
        color: #667eea;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .installments-table {
        width: 100%;
        margin-top: 1rem;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .dark-mode .installments-table {
        background: #222639 !important;
        color: #e4e6eb !important;
    }

    .installments-table th {
        background-color: #667eea;
        color: white;
        padding: 0.75rem;
        text-align: left;
        font-weight: 600;
    }

    .installments-table td {
        padding: 0.75rem;
        border-bottom: 1px solid #e9ecef;
        color: #333;
    }

    .dark-mode .installments-table td {
        border-bottom: 1px solid #2c3049 !important;
        color: #e4e6eb !important;
    }

    .installment-status {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-paid { background-color: #11cc77; color: #151716; }
    .status-partial { background-color: #11cc77; color: #151716; }
    .status-pending-ins { background-color: #11cc77; color: #151716; }
    .status-overdue { background-color: #11cc77; color: #151716; }

    .document-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #f8f9fa;
        color: #333;
        border: 1px solid #e9ecef;
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 0.5rem;
    }

    .dark-mode .document-item {
        background: #2c3049 !important;
        color: #e4e6eb !important;
        border: 1px solid #3d4461 !important;
    }
    


    .payment-summary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .payment-summary h3 {
        margin-bottom: 1rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .summary-row:last-child {
        border-bottom: none;
        font-size: 1.25rem;
        font-weight: 700;
        padding-top: 1rem;
    }

    @@media print {
        .action-bar, .no-print {
            display: none !important;
        }

        .booking-container {
            box-shadow: none;
            background: white !important;
        }

        .print-section {
            padding: 1rem;
            background: white !important;
            color: black !important;
        }

        /* Force light colors for print */
        .booking-text,
        .booking-heading,
        .booking-footer {
            color: black !important;
        }

        .installments-table td {
            color: black !important;
            border-bottom: 1px solid #e9ecef !important;
        }

        .document-item {
            background: #f8f9fa !important;
            color: black !important;
            border: 1px solid #e9ecef !important;
        }

        .property-details,
        .payment-details,
        .documents-section,
        .payment-plan-section {
            background: #f8f9fa !important;
            color: black !important;
        }

        .terms-section {
            border-top: 2px solid #e9ecef !important;
        }

        .terms-section li {
            color: #666 !important;
        }
    }

    @@media (max-width: 768px) {
        .info-section {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .print-section {
            padding: 1.5rem;
        }

        .action-bar {
            flex-direction: column;
            gap: 1rem;
        }
    }

    /* Dark mode overrides for inline styles */
    .dark-mode div[style*="color: #667eea"] {
        color: #667eea !important;
    }

    .dark-mode p[style*="color"],
    .dark-mode div[style*="color"] {
        color: #e4e6eb !important;
    }

    .dark-mode p[style*="color: #999"] {
        color: #a6adc8 !important;
    }

    .dark-mode p[style*="color: #333"] {
        color: #e4e6eb !important;
    }

    .dark-mode p[style*="color: #666"] {
        color: #a6adc8 !important;
    }

    /* Dark mode for booking-specific classes */
    .dark-mode .booking-text {
        color: #e4e6eb !important;
    }

    .dark-mode .booking-heading {
        color: #667eea !important;
    }

    .dark-mode .booking-footer {
        color: #a6adc8 !important;
    }

    .dark-mode .booking-footer .booking-text {
        color: #a6adc8 !important;
    }

    /* Terms section dark mode */
    .dark-mode .terms-section {
        border-top: 2px solid #2c3049 !important;
    }

    .dark-mode .terms-section li {
        color: #a6adc8 !important;
    }
</style>

<div class="content">
    <div class="booking-container">
        <!-- Action Bar -->
        <div class="action-bar no-print">
            <div>
                <a href="/Bookings/Index" class="btn btn-light">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
            <div>
                <button onclick="window.print()" class="btn btn-light">
                    <i class="fa-solid fa-print me-2"></i>Print
                </button>
                <a href="/Bookings/DownloadPdf/@Model.BookingId" class="btn btn-light">
                    <i class="fa-solid fa-download me-2"></i>Download PDF
                </a>
            </div>
        </div>

        <!-- Printable Section -->
        <div class="print-section">
            <!-- Company Header -->
            <div class="company-header">
                <h1>@companyName</h1>
                <p class="mb-0">@companyAddress</p>
                <p class="mb-0">Phone: @companyPhone | Email: @companyEmail</p>
                <p class="mb-0"><strong>GST: @companyGst</strong></p>
            </div>

            <!-- Booking Number and Status -->
            <div class="booking-number">
                BOOKING CONFIRMATION: @Model.BookingNumber
                <div class="float-end">
                    <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                </div>
            </div>

            <!-- Booking Date on right side -->
            <div style="display: grid; grid-template-columns: 1fr auto; margin-bottom: 2rem;">
                <div></div>
                <div style="padding-right: 2rem;">
                    <p class="booking-text" style="margin-bottom: 0.75rem;"><strong>Booking Date:</strong> @Model.BookingDate.ToString("MMM dd, yyyy")</p>
                    @if (Model.AgreementDate.HasValue)
                    {
                        <p class="booking-text" style="margin-bottom: 0.75rem;"><strong>Agreement Date:</strong> @Model.AgreementDate.Value.ToString("MMM dd, yyyy")</p>
                    }
                    @if (Model.PossessionDate.HasValue)
                    {
                        <p class="booking-text" style="margin-bottom: 0.75rem;"><strong>Possession Date:</strong> @Model.PossessionDate.Value.ToString("MMM dd, yyyy")</p>
                    }
                </div>
            </div>

            <!-- Customer Details on left side -->
            <div style="margin-bottom: 2rem;">
                <div style="padding-left: 2rem;">
                    <h5 class="booking-heading" style="color: #667eea; font-weight: 600; margin-bottom: 1rem;"><i class="fa-solid fa-user me-2"></i>Customer Details</h5>
                    <p class="booking-text" style="margin-bottom: 0.5rem;"><strong>@lead?.Name</strong></p>
                    <p class="booking-text" style="margin-bottom: 0.5rem;">@lead?.Contact</p>
                    <p class="booking-text" style="margin-bottom: 0.5rem;">@lead?.Email</p>
                </div>
            </div>

            <!-- Property Details on left side -->
            <div style="margin-bottom: 2rem;">
                <div style="padding-left: 2rem;">
                    <p class="booking-text" style="line-height: 1.8; color: #333;">
                        The property is located at <strong>@property?.PropertyName</strong> in <strong>@property?.Location</strong>@(string.IsNullOrEmpty(property?.Developer) ? "" : $", developed by {property.Developer}"). 
                        The customer has booked <strong>Flat @flat?.FlatName</strong>, which is a <strong>@flat?.BHK</strong> unit with a carpet area of <strong>@flat?.Area sq.ft</strong>, 
                        situated on <strong>@flat?.FloorNumber</strong>.
                    </p>
                </div>
            </div>

            <!-- Payment Details -->
            <div style="margin-bottom: 2rem;">
                <div style="padding-left: 2rem;">
                    <p class="booking-text" style="line-height: 1.8; color: #333;">
                        The total property value is <strong>₹@Model.TotalAmount.ToString("N2")</strong>. 
                        @if (Model.PaymentType == "FullPayment")
                        {
                            <text>The customer has opted for <strong>Full Payment</strong> and has paid the entire amount of <strong>₹@Model.TotalAmount.ToString("N2")</strong>.</text>
                        }
                        else
                        {
                            <text>The customer has opted for <strong>EMI Payment</strong> plan. An initial booking amount of <strong>₹@Model.BookingAmount.ToString("N2")</strong> has been paid.</text>
                            if (paymentPlan != null)
                            {
                                <text> The outstanding balance is <strong>₹@paymentPlan.OutstandingAmount.ToString("N2")</strong>, and a total of <strong>₹@paymentPlan.PaidAmount.ToString("N2")</strong> has been paid so far under the <strong>@paymentPlan.PlanType</strong> plan.</text>
                            }
                        }
                    </p>
                </div>
            </div>

            <!-- Payment Plan (if EMI) -->
            @if (Model.PaymentType == "EMI" && installments.Any())
            {
                <div class="payment-plan-section">
                    <h5><i class="fa-solid fa-calendar-days me-2"></i>EMI Payment Schedule</h5>
                    <table class="installments-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Milestone</th>
                                <th>Due Date</th>
                                <th class="text-end">Amount</th>
                                <th class="text-end">Paid</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var installment in installments)
                            {
                                <tr>
                                    <td>@installment.InstallmentNumber</td>
                                    <td>@installment.MilestoneName</td>
                                    <td>@installment.DueDate.ToString("MMM dd, yyyy")</td>
                                    <td class="text-end">₹@installment.Amount.ToString("N2")</td>
                                    <td class="text-end">₹@installment.PaidAmount.ToString("N2")</td>
                                    <td class="text-center">
                                        <span class="installment-status status-@installment.Status.ToLower()@(installment.Status == "Pending" ? "-ins" : "")">
                                            @installment.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <!-- Documents -->
            @if (documents.Any())
            {
                <div class="documents-section">
                    <h5><i class="fa-solid fa-file-alt me-2"></i>Uploaded Documents</h5>
                    @foreach (var doc in documents)
                    {
                        <div class="document-item">
                            <div>
                                <i class="fa-solid fa-file me-2 text-primary"></i>
                                <strong>@doc.DocumentType:</strong> @doc.DocumentName
                            </div>
                            <div>
                                <small class="text-muted">@doc.UploadedOn.ToString("MMM dd, yyyy")</small>
                                <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="fa-solid fa-download"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mt-4">
                    <h5 class="booking-heading" style="color: #667eea; font-weight: 600;">Notes:</h5>
                    <p class="booking-text" style="color: #666;">@Model.Notes</p>
                </div>
            }

            <!-- Terms and Conditions -->
            <div class="terms-section" style="margin-top: 3rem; padding-top: 2rem; border-top: 2px solid #e9ecef;">
                <h5 class="booking-heading" style="color: #667eea; font-weight: 600;">Terms & Conditions:</h5>
                <ul style="padding-left: 1.5rem;">
                    <li style="margin-bottom: 0.5rem; color: #666;">This booking is subject to the terms and conditions as per the agreement.</li>
                    <li style="margin-bottom: 0.5rem; color: #666;">All payments should be made as per the payment schedule.</li>
                    <li style="margin-bottom: 0.5rem; color: #666;">Property specifications are subject to change as per approved plans.</li>
                    <li style="margin-bottom: 0.5rem; color: #666;">Possession date is tentative and subject to completion of construction.</li>
                    <li style="margin-bottom: 0.5rem; color: #666;">All payments are non-refundable unless specified otherwise in the agreement.</li>
                </ul>
            </div>

            <!-- Footer -->
            <div class="text-center mt-4 booking-footer" style="color: #999; font-size: 0.875rem;">
                <p class="booking-text">Thank you for choosing @companyName</p>
                <p class="booking-text">For any queries, please contact us at @companyPhone or @companyEmail</p>
            </div>
        </div>
    </div>
</div>
