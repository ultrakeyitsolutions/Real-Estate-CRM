@model List<CRM.Models.BankAccountModel>
@{
    ViewData["Title"] = "Bank Accounts";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Bank Account Settings</h5>
                    <button class="btn btn-primary" onclick="openAccountModal()">
                        <i class="fa-solid fa-plus me-2"></i>Add New Account
                    </button>
                </div>
                <div class="card-body">
                    @if (Model?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var account in Model)
                            {
                                <div class="col-12 col-sm-6 col-lg-4 mb-3">
                                    <div class="card account-card @(account.IsActive ? "active-account" : "")">
                                        <div class="card-body">
                                            @if (account.IsActive)
                                            {
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <span class="badge bg-success">
                                                        <i class="fa-solid fa-check me-1"></i>Active
                                                    </span>
                                                </div>
                                            }
                                            <h6 class="card-title">@account.AccountHolderName</h6>
                                            <p class="card-text">
                                                <strong>Bank:</strong> @account.BankName<br>
                                                <strong>Account:</strong> ****@account.AccountNumber.Substring(Math.Max(0, account.AccountNumber.Length - 4))<br>
                                                <strong>IFSC:</strong> @account.IFSCCode<br>
                                                @if (!string.IsNullOrEmpty(account.AccountType))
                                                {
                                                    <strong>Type:</strong> @account.AccountType<br>
                                                }
                                            </p>
                                            <div class="d-flex gap-2">
                                                <button class="btn btn-sm btn-outline-primary" onclick="editAccount(@account.Id)">
                                                    <i class="fa-solid fa-edit"></i>
                                                </button>
                                                @if (!account.IsActive)
                                                {
                                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteAccount(@account.Id)">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fa-solid fa-university fa-3x text-muted mb-3"></i>
                            <h5>No Bank Accounts Added</h5>
                            <p class="text-muted">Add your first bank account to start receiving payments</p>
                            <button class="btn btn-primary" onclick="openAccountModal()">
                                <i class="fa-solid fa-plus me-2"></i>Add Bank Account
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bank Account Modal -->
<div class="modal fade" id="accountModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="width: 95vw; max-width: 500px;">
        <div class="modal-content" style="max-height: 90vh; overflow-y: auto;">
            <div class="modal-header">
                <h5 class="modal-title" id="accountModalTitle">Add Bank Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="accountForm">
                <div class="modal-body">
                    <input type="hidden" id="accountId" name="Id" value="0">
                    
                    <div class="mb-3">
                        <label class="form-label">Account Holder Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="AccountHolderName" id="accountHolderName" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Account Number <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="AccountNumber" id="accountNumber" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Bank Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="BankName" id="bankName" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">IFSC Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="IFSCCode" id="ifscCode" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Branch Name</label>
                        <input type="text" class="form-control" name="BranchName" id="branchName">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Account Type</label>
                        <select class="form-select" name="AccountType" id="accountType">
                            <option value="">Select Type</option>
                            <option value="Savings">Savings</option>
                            <option value="Current">Current</option>
                            <option value="Business">Business</option>
                        </select>
                    </div>
                    
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsActive" id="isActiveAccount">
                        <label class="form-check-label" for="isActiveAccount">
                            Set as active account
                        </label>
                        <small class="form-text text-muted">Only one account can be active at a time</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
const accounts = @Html.Raw(Json.Serialize(Model));

function openAccountModal(accountId = null) {
    document.getElementById('accountModalTitle').textContent = accountId ? 'Edit Bank Account' : 'Add Bank Account';
    
    if (accountId) {
        const account = accounts.find(a => a.id === accountId);
        if (account) {
            document.getElementById('accountId').value = account.id;
            document.getElementById('accountHolderName').value = account.accountHolderName;
            document.getElementById('accountNumber').value = account.accountNumber;
            document.getElementById('bankName').value = account.bankName;
            document.getElementById('ifscCode').value = account.ifscCode;
            document.getElementById('branchName').value = account.branchName || '';
            document.getElementById('accountType').value = account.accountType || '';
            document.getElementById('isActiveAccount').checked = account.isActive;
        }
    } else {
        document.getElementById('accountForm').reset();
        document.getElementById('accountId').value = '0';
    }
    
    new bootstrap.Modal(document.getElementById('accountModal')).show();
}

function editAccount(accountId) {
    openAccountModal(accountId);
}

function deleteAccount(accountId) {
    if (confirm('Are you sure you want to delete this bank account?')) {
        fetch('/Financial/DeleteBankAccount', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: 'id=' + accountId
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Bank account deleted successfully!');
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        })
        .catch(error => {
            alert('An error occurred while deleting the account');
        });
    }
}

document.getElementById('accountForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    
    fetch('/Financial/SaveBankAccount', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Bank account saved successfully!');
            location.reload();
        } else {
            alert('Error: ' + data.message);
        }
    })
    .catch(error => {
        alert('An error occurred while saving the account');
    });
});
</script>

<style>
.account-card {
    transition: transform 0.2s;
    border: 2px solid #dee2e6;
}

.account-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.account-card.active-account {
    border-color: #28a745 !important;
    background-color: #f8fff9;
}

.dark-mode .account-card.active-account {
    background-color: #1a2f1a;
}
</style>