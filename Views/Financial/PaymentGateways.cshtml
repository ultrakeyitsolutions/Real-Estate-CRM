@model List<CRM.Models.PaymentGatewayModel>
@{
    ViewData["Title"] = "Payment Gateways";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Payment Gateway Settings</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Razorpay Card -->
                        <div class="col-12 col-sm-6 col-md-4 mb-3">
                            <div class="card gateway-card">
                                <div class="card-body text-center">
                                    <img src="https://razorpay.com/assets/razorpay-logo.svg" alt="Razorpay" style="height: 40px;" class="mb-3">
                                    <h6>Razorpay</h6>
                                    <p class="text-muted small">Accept payments via UPI, Cards, Net Banking</p>
                                    @{
                                        var razorpay = Model.FirstOrDefault(g => g.GatewayName == "Razorpay");
                                    }
                                    @if (razorpay?.IsActive == true)
                                    {
                                        <span class="badge bg-success mb-2">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary mb-2">Inactive</span>
                                    }
                                    <br>
                                    <button class="btn btn-primary btn-sm" onclick="openGatewayModal('Razorpay')">
                                        View Integration
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- PayPal Card -->
                        <div class="col-12 col-sm-6 col-md-4 mb-3">
                            <div class="card gateway-card">
                                <div class="card-body text-center">
                                    <img src="https://www.paypalobjects.com/webstatic/mktg/Logo/pp-logo-100px.png" alt="PayPal" style="height: 40px;" class="mb-3">
                                    <h6>PayPal</h6>
                                    <p class="text-muted small">Global payment processing</p>
                                    <span class="badge bg-warning mb-2">Coming Soon</span>
                                    <br>
                                    <button class="btn btn-secondary btn-sm" disabled>
                                        View Integration
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gateway Integration Modal -->
<div class="modal fade" id="gatewayModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="width: 95vw; max-width: 500px;">
        <div class="modal-content" style="max-height: 90vh; overflow-y: auto;">
            <div class="modal-header">
                <h5 class="modal-title" id="gatewayModalTitle">Gateway Integration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="gatewayForm">
                <div class="modal-body">
                    <input type="hidden" id="gatewayName" name="GatewayName">
                    
                    <div class="mb-3">
                        <label class="form-label">Key ID <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="KeyId" id="keyId" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Key Secret <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" name="KeySecret" id="keySecret" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Webhook Secret</label>
                        <input type="text" class="form-control" name="WebhookSecret" id="webhookSecret">
                    </div>
                    
                    <div class="form-check">
                        <input type="hidden" name="IsActive" value="false">
                        <input class="form-check-input" type="checkbox" name="IsActive" id="isActive" value="true">
                        <label class="form-check-label" for="isActive">
                            Enable this gateway
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Configuration</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
const gateways = @Html.Raw(Json.Serialize(Model));

function openGatewayModal(gatewayName) {
    document.getElementById('gatewayModalTitle').textContent = gatewayName + ' Integration';
    document.getElementById('gatewayName').value = gatewayName;
    
    // Load existing data
    const gateway = gateways.find(g => g.gatewayName === gatewayName);
    if (gateway) {
        document.getElementById('keyId').value = gateway.keyId || '';
        document.getElementById('keySecret').value = gateway.keySecret || '';
        document.getElementById('webhookSecret').value = gateway.webhookSecret || '';
        document.getElementById('isActive').checked = gateway.isActive || false;
    } else {
        document.getElementById('gatewayForm').reset();
        document.getElementById('gatewayName').value = gatewayName;
    }
    
    new bootstrap.Modal(document.getElementById('gatewayModal')).show();
}

document.getElementById('gatewayForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    
    // Handle checkbox properly - if checked, set to true, otherwise false
    const isActiveCheckbox = document.getElementById('isActive');
    formData.set('IsActive', isActiveCheckbox.checked ? 'true' : 'false');
    
    fetch('/Financial/SavePaymentGateway', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Gateway configuration saved successfully!');
            location.reload();
        } else {
            alert('Error: ' + data.message);
        }
    })
    .catch(error => {
        alert('An error occurred while saving the configuration');
    });
});
</script>

<style>
.gateway-card {
    transition: transform 0.2s;
    border: 1px solid #dee2e6;
}

.gateway-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}
</style>