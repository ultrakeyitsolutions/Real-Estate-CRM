@model CRM.Models.BrandingModel
@{
    ViewData["Title"] = "Landing Page Branding";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Landing Page Branding Settings</h5>
                </div>
                <div class="card-body">
                    <form id="brandingForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        
                        <!-- Header Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2">Header & Navigation</h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Company Logo</label>
                                    <input type="file" class="form-control" name="CompanyLogo" accept="image/*">
                                    <small class="text-muted">Max size: 2MB. Formats: PNG, JPG, GIF</small>
                                    @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.CompanyLogo" alt="Company Logo" style="max-height: 60px;" class="border">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Social Media Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2">Social Media Links</h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Twitter URL</label>
                                    <input type="url" class="form-control" name="TwitterUrl" value="@Model.TwitterUrl" placeholder="https://twitter.com/yourcompany">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Facebook URL</label>
                                    <input type="url" class="form-control" name="FacebookUrl" value="@Model.FacebookUrl" placeholder="https://facebook.com/yourcompany">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">LinkedIn URL</label>
                                    <input type="url" class="form-control" name="LinkedInUrl" value="@Model.LinkedInUrl" placeholder="https://linkedin.com/company/yourcompany">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">WhatsApp Number</label>
                                    <input type="text" class="form-control" name="WhatsAppNumber" value="@Model.WhatsAppNumber" placeholder="+91-9876543210">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Instagram URL</label>
                                    <input type="url" class="form-control" name="InstagramUrl" value="@Model.InstagramUrl" placeholder="https://instagram.com/yourcompany">
                                </div>
                            </div>
                        </div>

                        <!-- About Us Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2">About Us Section</h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">About Us Text</label>
                                    <textarea class="form-control" name="AboutUsText" rows="4" placeholder="Enter about us description...">@Model.AboutUsText</textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">About Us Image</label>
                                    <input type="file" class="form-control" name="AboutUsImage" accept="image/*">
                                    <small class="text-muted">Max size: 2MB. Formats: PNG, JPG, GIF</small>
                                    @if (!string.IsNullOrEmpty(Model.AboutUsImage))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.AboutUsImage" alt="About Us" style="max-height: 100px;" class="border">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Footer Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2">Footer Section</h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Footer Logo</label>
                                    <input type="file" class="form-control" name="FooterLogo" accept="image/*">
                                    <small class="text-muted">Smaller version for footer. Max size: 2MB</small>
                                    @if (!string.IsNullOrEmpty(Model.FooterLogo))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.FooterLogo" alt="Footer Logo" style="max-height: 40px;" class="border">
                                        </div>
                                    }
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Company Information</label>
                                    <textarea class="form-control" name="CompanyInfo" rows="4" placeholder="Company Name, Address, Phone, Email...">@Model.CompanyInfo</textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Terms & Conditions</label>
                                    <textarea class="form-control" name="TermsAndConditions" rows="3" placeholder="Terms and conditions text...">@Model.TermsAndConditions</textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Privacy Policy</label>
                                    <textarea class="form-control" name="PrivacyPolicy" rows="3" placeholder="Privacy policy text...">@Model.PrivacyPolicy</textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Update Branding
                                </button>
                                <a href="@Url.Action("Index", "Settings")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Settings
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('brandingForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        var formData = new FormData(this);
        
        fetch('@Url.Action("UpdateBranding", "Settings")', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                setTimeout(function() {
                    location.reload();
                }, 1500);
            } else {
                alert(data.message);
            }
        })
        .catch(error => {
            alert('An error occurred while updating branding settings.');
        });
    });
});
</script>