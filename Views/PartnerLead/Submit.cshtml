@model CRM.Models.PartnerLeadModel
@{
    ViewData["Title"] = "Submit Partner Lead";
}
<div class="container mt-4">
    <h2>Submit Lead</h2>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    <form asp-action="Submit" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label>Partner ID</label>
                <input asp-for="PartnerId" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label>Lead Name</label>
                <input asp-for="LeadName" class="form-control" required />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label>Contact</label>
                <input asp-for="Contact" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label>Property Interest</label>
                <input asp-for="PropertyInterest" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit Lead</button>
    </form>
</div>
