@model List<CRM.Models.LeadNoteModel>

<div class="notes-section">
    <!-- Add Note Form -->
    <div class="card mb-4 modern-note-form">
        <div class="card-body">
            <form id="addNoteForm" onsubmit="return saveNote(event)">
                <input type="hidden" id="noteLeadId" value="@ViewBag.LeadId" />
                <div class="mb-3">
                    <label for="noteText" class="form-label fw-bold">
                        <i class="fa-solid fa-pen me-1"></i>Add a Note
                    </label>
                    <textarea class="form-control" id="noteText" rows="3" 
                              placeholder="Enter your note or observation about this lead..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-save me-1"></i>Save Note
                </button>
            </form>
        </div>
    </div>

    <!-- Notes List -->
    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="fa-solid fa-note-sticky text-body-tertiary" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-body-tertiary">No Notes Yet</h5>
            <p class="text-body-secondary">Add your first note about this lead using the form above.</p>
        </div>
    }
    else
    {
        <div class="notes-list">
            @foreach (var note in Model)
            {
                var executive = (ViewBag.Executives as List<CRM.Models.UserModel>)?.FirstOrDefault(e => e.UserId == note.ExecutiveId);
                var executiveName = executive?.Username ?? "Unknown";

                <div class="card mb-3 note-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-m me-2">
                                    <div class="avatar-name rounded-circle bg-info-subtle text-info">
                                        <span class="fs-9 fw-bold">@executiveName.Substring(0, 1).ToUpper()</span>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-0">@executiveName</h6>
                                    <small class="text-body-tertiary">
                                        <i class="fa-solid fa-clock me-1"></i>@note.CreatedOn.ToString("MMM dd, yyyy hh:mm tt")
                                    </small>
                                </div>
                            </div>
                            <button class="btn btn-sm btn-phoenix-secondary" onclick="deleteNote(@note.NoteId)" title="Delete Note">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                        <div class="note-content">
                            <p class="mb-0 text-body">@note.NoteText</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .notes-section {
        animation: fadeIn 0.3s ease-in;
    }

    .modern-note-form {
        border: none;
        border-radius: 16px;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.05) 0%, rgba(124, 58, 237, 0.05) 100%);
        border: 1px solid rgba(79, 70, 229, 0.1);
        box-shadow: 0 4px 20px rgba(79, 70, 229, 0.08);
    }
    
    .modern-note-form .form-control {
        border-radius: 12px;
        border: 1px solid rgba(79, 70, 229, 0.2);
        transition: all 0.3s ease;
    }
    
    .modern-note-form .form-control:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.15);
        transform: translateY(-1px);
    }
    
    .modern-note-form .btn-primary {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        border: none;
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .modern-note-form .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(79, 70, 229, 0.3);
    }
    
    .note-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-left: 4px solid #4f46e5;
    }

    .note-card:hover {
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        transform: translateY(-3px) translateX(5px);
        border-left-color: #7c3aed;
    }

    .note-content {
        padding: 1rem;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.03) 0%, rgba(124, 58, 237, 0.03) 100%);
        border-radius: 12px;
        margin-top: 1rem;
        border: 1px solid rgba(79, 70, 229, 0.1);
    }

    .avatar-name {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%) !important;
        color: white !important;
        border: 2px solid rgba(79, 70, 229, 0.1);
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.15);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    function saveNote(event) {
        event.preventDefault();
        
        const leadId = document.getElementById('noteLeadId').value;
        const noteText = document.getElementById('noteText').value.trim();
        
        if (!noteText) {
            alert('Please enter a note');
            return false;
        }

        const submitBtn = event.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';

        fetch('/Leads/SaveNote', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `leadId=${leadId}&noteText=${encodeURIComponent(noteText)}`
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                document.getElementById('noteText').value = '';
                loadNotes(leadId);
            } else {
                alert(result.message || 'Failed to save note');
            }
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while saving the note');
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        });

        return false;
    }

    function deleteNote(noteId) {
        if (!confirm('Are you sure you want to delete this note?')) {
            return;
        }

        fetch('/Leads/DeleteNote?noteId=' + noteId, {
            method: 'POST'
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                const leadId = document.getElementById('noteLeadId').value;
                loadNotes(leadId);
            } else {
                alert(result.message || 'Failed to delete note');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while deleting the note');
        });
    }
</script>
