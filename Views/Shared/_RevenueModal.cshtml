<!-- Revenue Modal -->
<div class="modal fade" id="revenueModal" tabindex="-1" aria-labelledby="revenueModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="width: 50%; max-width: 50%;">
        <div class="modal-content" style="border: none; border-radius: 15px; box-shadow: 0 10px 40px rgba(0,0,0,0.15);">
            <div class="modal-header" style="border-bottom: 1px solid #f0f0f0; padding: 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 15px 15px 0 0;">
                <h5 class="modal-title" id="revenueModalLabel" style="margin: 0; font-weight: 600;"><i class="fa-solid fa-coins me-2"></i>Add Revenue</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="revenueForm">
                <div class="modal-body" style="padding: 2rem;">
                    <input type="hidden" id="revenueId" name="RevenueId" value="0" />
                    
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #495057;">Type</label>
                        <select id="revenueType" name="Type" class="form-select" style="border-radius: 8px; border: 1px solid #e0e0e0; padding: 0.75rem;" required>
                            <option value="Sale">Sale price of property/unit</option>
                            <option value="Booking">Booking/Advance amount</option>
                            <option value="Rental">Rental income</option>
                            <option value="Service">Other service charges</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #495057;">Description</label>
                        <input id="revenueDescription" name="Description" class="form-control" style="border-radius: 8px; border: 1px solid #e0e0e0; padding: 0.75rem;" required />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #495057;">Amount</label>
                        <input id="revenueAmount" name="Amount" class="form-control" type="number" step="0.01" min="0" style="border-radius: 8px; border: 1px solid #e0e0e0; padding: 0.75rem;" required />
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid #f0f0f0; padding: 1.5rem; gap: 10px;">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal" style="border-radius: 8px; padding: 0.75rem 1.5rem; font-weight: 500;">Cancel</button>
                    <button type="submit" class="btn" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; padding: 0.75rem 1.5rem; font-weight: 500;">Save Revenue</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const revenueModal = document.getElementById('revenueModal');
    const revenueForm = document.getElementById('revenueForm');
    
    // Handle form submission
    revenueForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(revenueForm);
        const revenueId = document.getElementById('revenueId').value;
        const url = revenueId === '0' ? '/Revenue/CreateModal' : '/Revenue/EditModal';
        
        fetch(url, {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                bootstrap.Modal.getInstance(revenueModal).hide();
                location.reload(); // Refresh the page to show updated data
            } else {
                alert('Error: ' + (data.message || 'Failed to save revenue'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while saving revenue');
        });
    });
    
    // Reset form when modal is hidden
    revenueModal.addEventListener('hidden.bs.modal', function() {
        revenueForm.reset();
        document.getElementById('revenueId').value = '0';
        document.getElementById('revenueModalLabel').textContent = 'Add Revenue';
    });
});

// Function to open modal for creating new revenue
function openRevenueModal() {
    document.getElementById('revenueModalLabel').textContent = 'Add Revenue';
    document.getElementById('revenueId').value = '0';
    document.getElementById('revenueForm').reset();
    new bootstrap.Modal(document.getElementById('revenueModal')).show();
}

// Function to open modal for editing existing revenue
function editRevenue(revenueId) {
    fetch(`/Revenue/GetRevenue/${revenueId}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById('revenueModalLabel').textContent = 'Edit Revenue';
                document.getElementById('revenueId').value = data.data.revenueId;
                document.getElementById('revenueType').value = data.data.type;
                document.getElementById('revenueDescription').value = data.data.description;
                document.getElementById('revenueAmount').value = data.data.amount;
                new bootstrap.Modal(document.getElementById('revenueModal')).show();
            } else {
                alert('Error: ' + (data.message || 'Failed to load revenue data'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while loading revenue data');
        });
}
</script>