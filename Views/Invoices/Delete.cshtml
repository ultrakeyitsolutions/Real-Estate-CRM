@model CRM.Models.InvoiceModel
@{
    ViewData["Title"] = "Delete Invoice";
}

<h2>Delete Invoice</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this invoice?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Invoice Number</dt>
        <dd class="col-sm-10">@Model.InvoiceNumber</dd>
        <dt class="col-sm-2">Invoice Date</dt>
        <dd class="col-sm-10">@Model.InvoiceDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">â‚¹@Model.Amount.ToString("N2")</dd>
    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="InvoiceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
