@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model CRM.Models.UserModel
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Delete User</h2>
            <div class="alert alert-danger">Are you sure you want to delete this user?</div>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Username</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>
            @using (Html.BeginForm("Delete", "ManageUsers", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.UserId)
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index", "ManageUsers")" class="btn btn-secondary ml-2">Cancel</a>
            }
        </div>
    </div>
</div>
