@model IEnumerable<CRM.Models.UserModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="container-fluid p-0 mt-5">
    <div class="row mb-2 mb-xl-4">
        <div class="col-auto d-none d-sm-block">
            <h3><strong>Manage Users</strong></h3>
        </div>
        <div class="col-auto ms-auto text-end mt-n1">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addUserModal">
                <i class="bi bi-plus-circle me-1"></i> Add User
            </button>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card w-100">
                <div class="card-header">
                    <div class="row g-2">
                        <div class="col-12 col-lg-3">
                            <input type="text" id="searchBox" class="form-control form-control-sm" placeholder="Search users...">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-striped table-hover" id="usersTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Created</th>
                                    <th>Last Activity</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Username</td>
                                        <td>@user.Role</td>
                                        <td>@user.Phone</td>
                                        <td>@user.Email</td>
                                        <td>@user.CreatedDate.ToString("dd MMM yyyy")</td>
                                        <td>@(user.LastActivity?.ToString("dd MMM yyyy") ?? "—")</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-primary me-1" data-bs-toggle="modal" data-bs-target="#editUserModal" data-user-id="@user.UserId">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this user?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Mobile card view -->
                    <div class="d-block d-md-none">
                        <div class="row">
                            @foreach (var user in Model)
                            {
                                <div class="col-12 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <h5 class="mb-0">@user.Username</h5>
                                                <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">@(user.IsActive ? "Active" : "Inactive")</span>
                                            </div>
                                            <p class="mb-1"><strong>Role:</strong> @user.Role</p>
                                            <p class="mb-1"><strong>Phone:</strong> @user.Phone</p>
                                            <p class="mb-1"><strong>Email:</strong> @user.Email</p>
                                            <p class="mb-1"><strong>Created:</strong> @user.CreatedDate.ToString("dd MMM yyyy")</p>
                                            <p class="mb-1"><strong>Last Activity:</strong> @(user.LastActivity?.ToString("dd MMM yyyy") ?? "—")</p>
                                            <div class="mt-2">
                                                <button type="button" class="btn btn-sm btn-primary me-1" data-bs-toggle="modal" data-bs-target="#editUserModal" data-user-id="@user.UserId">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                                <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this user?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row mt-3 px-3 g-2">
                        <div class="col-12 col-md-6">
                            <p class="text-muted mb-2 mb-md-0">Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalRecords">0</span> entries</p>
                        </div>
                        <div class="col-12 col-md-6">
                            <nav>
                                <ul class="pagination justify-content-center justify-content-md-end mb-0" id="pagination">
                                    <!-- Pagination will be generated by JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <!-- Add User Modal with all fields -->
                    <div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" style="max-width: 700px !important; width: 700px;">
                            <div class="modal-content">
                                <form id="addUserForm" method="post" action="/ManageUsers/AddUser">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add New User</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Name</label>
                                                <input name="Username" class="form-control" placeholder="Enter full name" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Email</label>
                                                <input name="Email" class="form-control" placeholder="Enter email" required />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Role</label>
                                                <select name="Role" class="form-select" required>
                                                    <option value="">Choose</option>
                                                    @foreach (var role in ViewBag.Roles as List<string> ?? new List<string>())
                                                    {
                                                        <option value="@role">@role</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Phone</label>
                                                <input name="Phone" class="form-control" placeholder="Primary number" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6 position-relative">
                                                <label class="form-label">Password</label>
                                                <div class="input-group">
                                                    <input name="Password" id="addPassword" type="password" class="form-control" placeholder="Enter password" required value="@(ViewBag.Password ?? "")" />
                                                    <span class="input-group-text" id="toggleAddPassword" style="cursor:pointer;">
                                                        <i class="bi bi-eye-slash" id="addPasswordIcon"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Status</label><br />
                                                <div class="form-check form-check-inline">
                                                    <input name="IsActive" class="form-check-input" type="radio" value="true" checked>
                                                    <label class="form-check-label">Active</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input name="IsActive" class="form-check-input" type="radio" value="false">
                                                    <label class="form-check-label">Inactive</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Edit User Modal with all fields -->
                    <div class="modal fade" id="editUserModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" style="max-width: 700px !important; width: 700px;">
                            <div class="modal-content">
                                <form id="editUserForm" method="post" action="/ManageUsers/EditUser">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit User</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="UserId" id="editUserId" />
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Name</label>
                                                <input name="Username" id="editUsername" class="form-control" placeholder="Enter full name" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Email</label>
                                                <input name="Email" id="editEmail" class="form-control" placeholder="Enter email" required />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Role</label>
                                                <select name="Role" id="editRole" class="form-select" required>
                                                    <option value="">Choose</option>
                                                    @foreach (var role in ViewBag.Roles as List<string> ?? new List<string>())
                                                    {
                                                        <option value="@role">@role</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Phone</label>
                                                <input name="Phone" id="editPhone" class="form-control" placeholder="Primary number" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Status</label><br />
                                                <div class="form-check form-check-inline">
                                                    <input name="IsActive" id="editActive" class="form-check-input" type="radio" value="true">
                                                    <label class="form-check-label">Active</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input name="IsActive" id="editInactive" class="form-check-input" type="radio" value="false">
                                                    <label class="form-check-label">Inactive</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-success">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- End Edit User Modal -->
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Responsive table and card tweaks */
    @@media (max-width: 767.98px) {
        .table-responsive.d-none.d-md-block {
            display: none !important;
        }

        .d-block.d-md-none {
            display: block !important;
        }
    }
    @@media (min-width: 768px) {
        .table-responsive.d-none.d-md-block {
            display: block !important;
        }

        .d-block.d-md-none {
            display: none !important;
        }
    }

    /* Prevent horizontal scroll on mobile */
    body, html {
      max-width: 100vw;
      overflow-x: hidden;
    }
    .container-fluid, .row, .card {
      width: 100% !important;
      margin: 0 !important;
      padding: 0 !important;
      box-sizing: border-box;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search functionality
            $('#searchBox').on('input', function () {
                var q = $(this).val().toLowerCase();
                $('#usersTableBody tr').each(function () {
                    var match = $(this).text().toLowerCase().indexOf(q) > -1;
                    $(this).toggle(match);
                });
            });

            // Auto-populate password in Add User modal
            function autoPopulatePassword() {
                var email = $('input[name="Email"]', '#addUserForm').val();
                var phone = $('input[name="Phone"]', '#addUserForm').val();
                var password = '';
                if (email && phone) {
                    var first4 = email.substring(0, 4).toUpperCase();
                    var lastDigits = phone.replace(/\D/g, '').slice(-4);
                    password = first4 + '@@' + lastDigits;
                }
                $('#addPassword').val(password);
            }
            $('#addUserModal').on('shown.bs.modal', function () {
                autoPopulatePassword();
            });
            $('input[name="Email"]', '#addUserForm').on('input', autoPopulatePassword);
            $('input[name="Phone"]', '#addUserForm').on('input', autoPopulatePassword);

            // Password visibility toggle for Add User
            $('#toggleAddPassword').on('click', function () {
                var input = $('#addPassword');
                var icon = $('#addPasswordIcon');
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                }
            });

            // Add User form submit
            $('#addUserForm').on('submit', function (e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function (data) {
                    location.reload();
                });
            });

            // Edit User modal: populate fields
            $('#editUserModal').on('show.bs.modal', function (e) {
                var userId = $(e.relatedTarget).data('user-id');
                // Fetch user data via AJAX (example endpoint, adjust as needed)
                $.getJSON('/ManageUsers/GetUser/' + userId, function (user) {
                    $('#editUserId').val(user.userId);
                    $('#editUsername').val(user.username);
                    $('#editEmail').val(user.email);
                    $('#editRole').val(user.role);
                    $('#editPhone').val(user.phone);
                    if (user.isActive) {
                        $('#editActive').prop('checked', true);
                    } else {
                        $('#editInactive').prop('checked', true);
                    }
                });
            });

            // Edit User form submit
            $('#editUserForm').on('submit', function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                // Ensure UserId is included
                formData += '&UserId=' + $('#editUserId').val();
                $.post($(this).attr('action'), formData, function (data) {
                    location.reload();
                });
            });
        });
    </script>
}