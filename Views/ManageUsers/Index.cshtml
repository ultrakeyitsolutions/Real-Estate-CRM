@section Scripts {
    <!-- SweetAlert2 for beautiful alerts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Global subscription alerts -->
    <script src="~/js/subscription-alerts.js"></script>
<script>
$(document).ready(function () {
    // Handle dropdown z-index
    $('.user-card .dropdown').on('show.bs.dropdown', function () {
        $('.user-card').css('z-index', '1');
        $(this).closest('.user-card').css('z-index', '9999');
    });

    $('.user-card .dropdown').on('hide.bs.dropdown', function () {
        $(this).closest('.user-card').css('z-index', '1');
    });

    // Search and filter functionality
    function applyFilters() {
        var search = $('#searchBox').val().toLowerCase();
        var role = $('#filterRole').val();
        var status = $('#filterStatus').val();

        $('.user-card').each(function () {
            var card = $(this);
            var text = card.text().toLowerCase();
            var cardRole = card.data('role');
            var cardStatus = card.data('status');

            var matchSearch = !search || text.includes(search);
            var matchRole = !role || cardRole === role;
            var matchStatus = !status || cardStatus === status;

            if (matchSearch && matchRole && matchStatus) {
                card.show();
            } else {
                card.hide();
            }
        });
    }

    $('#searchBox, #filterRole, #filterStatus').on('input change', applyFilters);

    $('#clearFilters').on('click', function () {
        $('#searchBox').val('');
        $('#filterRole').val('');
        $('#filterStatus').val('');
        applyFilters();
    });

    // Password toggle
    $('#toggleAddPassword').on('click', function () {
        var input = $('#addPassword');
        var icon = $('#addPasswordIcon');
        if (input.attr('type') === 'password') {
            input.attr('type', 'text');
            icon.removeClass('fa-eye-slash').addClass('fa-eye');
        } else {
            input.attr('type', 'password');
            icon.removeClass('fa-eye').addClass('fa-eye-slash');
        }
    });

    // Edit user button
    $('.edit-user-btn').on('click', function () {
        var userId = $(this).data('user-id');
        $.getJSON('/ManageUsers/GetUser/' + userId, function (user) {
            $('#editUserId').val(user.userId);
            $('#editUsername').val(user.username);
            $('#editEmail').val(user.email);
            $('#editRole').val(user.role);
            $('#editPhone').val(user.phone);
            if (user.isActive) {
                $('#editActive').prop('checked', true);
            } else {
                $('#editInactive').prop('checked', true);
            }
            $('#editUserModal').modal('show');
        });
    });

    // Delete user button
    $('.delete-user-btn').on('click', function () {
        var userId = $(this).data('user-id');
        if (confirm('Are you sure you want to delete this user?')) {
            $.post('/ManageUsers/DeleteUser/' + userId, function () {
                location.reload();
            });
        }
    });

    // Form submissions
    $('#addUserForm').on('submit', function (e) {
        e.preventDefault();
        
        var formData = new FormData(this);
        
        $.ajax({
            url: $(this).attr('action'),
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            },
            success: function(response) {
                if (response.success) {
                    location.reload();
                } else if (response.agentLimitReached) {
                    SubscriptionAlerts.showAgentLimitAlert(response.message, response.availablePlans);
                } else if (response.storageLimitReached) {
                    SubscriptionAlerts.showStorageLimitAlert(response.message, response.currentUsageGB, response.limitGB, response.availablePlans);
                } else {
                    alert(response.message || 'Error occurred');
                }
            },
            error: function() {
                alert('Error occurred while adding user');
            }
        });
    });

    $('#editUserForm').on('submit', function (e) {
        e.preventDefault();
        $.post($(this).attr('action'), $(this).serialize(), function () {
            location.reload();
        });
    });

    // Load SweetAlert2 if not already loaded
    if (typeof Swal === 'undefined') {
        var script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/npm/sweetalert2@11';
        document.head.appendChild(script);
    }
});
</script>
}
