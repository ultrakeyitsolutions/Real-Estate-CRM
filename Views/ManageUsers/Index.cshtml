<div class="content">
    <!-- Breadcrumb -->
    <nav class="mb-3" aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
            <li class="breadcrumb-item active">Manage Users</li>
        </ol>
    </nav>

    <!-- Modern Header with Stats -->
    <div class="modern-header">
        <div class="header-content">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fa-solid fa-user-shield" style="font-size: 2.5rem; opacity: 0.9;"></i>
                        </div>
                        <div>
                            <h1 class="header-title mb-0">Manage Users</h1>
                            <p class="header-subtitle mb-0">Control user access and manage system permissions</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stats-card">
                    <div class="stats-number">@totalUsers</div>
                    <div class="stats-label">Total Users</div>
                </div>
                <div class="stats-card">
                    <div class="stats-number">@activeUsers</div>
                    <div class="stats-label">Active</div>
                </div>
                <div class="stats-card">
                    <div class="stats-number">@inactiveUsers</div>
                    <div class="stats-label">Inactive</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="filter-title">
            <i class="fa-solid fa-filter"></i>
            <span>Filter & Search</span>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label for="searchBox" class="form-label fw-semibold">
                    <i class="fa-solid fa-search text-muted me-2"></i>Search Users
                </label>
                <input type="text" class="form-control" id="searchBox" 
                       placeholder="Search by name, email, phone...">
            </div>
            <div class="col-md-3">
                <label for="filterRole" class="form-label fw-semibold">Role</label>
                <select id="filterRole" class="form-select">
                    <option value="">All Roles</option>
                    @foreach (var roleOption in ViewBag.Roles as List<string> ?? new List<string>())
                    {
                        <option value="@roleOption">@roleOption</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterStatus" class="form-label fw-semibold">Status</label>
                <select id="filterStatus" class="form-select">
                    <option value="">All Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <button type="button" class="btn btn-outline-primary" id="clearFilters">
                    <i class="fa-solid fa-refresh me-1"></i>Clear Filters
                </button>
            </div>
        </div>
    </div>

    <!-- Users List -->
    <div id="usersContainer">
        @foreach (var user in usersList)
        {
            <div class="user-card paginated-item" data-role="@user.Role" data-status="@(user.IsActive ? "Active" : "Inactive")">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="user-name">
                            <i class="fa-solid fa-user me-2"></i>@user.Username
                        </div>
                        <div class="user-info">
                            <i class="fa-solid fa-envelope"></i>
                            <span>@user.Email</span>
                        </div>
                        <div class="user-info">
                            <i class="fa-solid fa-phone"></i>
                            <span>@user.Phone</span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="user-info">
                            <i class="fa-solid fa-user-tag"></i>
                            <span class="role-badge">@user.Role</span>
                        </div>
                        <div class="user-info">
                            <i class="fa-solid fa-calendar"></i>
                            <span>Created: @user.CreatedDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        @if (user.LastActivity.HasValue)
                        {
                            <div class="user-info">
                                <i class="fa-solid fa-clock"></i>
                                <span>Last Active: @user.LastActivity.Value.ToString("MMM dd, yyyy")</span>
                            </div>
                        }
                    </div>
                    <div class="col-md-3 text-center">
                        <span class="status-badge status-@(user.IsActive ? "active" : "inactive")">
                            @(user.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="col-md-2 text-end">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/Attendance/Calendar?agentId=@user.UserId">
                                        <i class="fa-solid fa-calendar-check me-2"></i>Attendance
                                    </a>
                                </li>
                                <li>
                                    <button class="dropdown-item edit-user-btn" data-user-id="@user.UserId">
                                        <i class="fa-solid fa-pencil me-2"></i>Edit
                                    </button>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @if (role?.ToLower() == "admin")
                                {
                                    <li>
                                        <button class="dropdown-item impersonate-user-btn" data-user-id="@user.UserId" data-username="@user.Username">
                                            <i class="fa-solid fa-user-secret me-2"></i>Impersonate
                                        </button>
                                    </li>
                                }
                                <li>
                                    <button class="dropdown-item text-danger delete-user-btn" data-user-id="@user.UserId">
                                        <i class="fa-solid fa-trash me-2"></i>Delete
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <!-- Pagination -->
        <div id="pagination-container" class="mt-4"></div>
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 700px !important; width: 700px;">
        <div class="modal-content">
            <form id="addUserForm" method="post" action="/ManageUsers/AddUser">
                <div class="modal-header">
                    <h5 class="modal-title">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input name="Username" class="form-control" placeholder="Enter full name" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input name="Email" type="email" class="form-control" placeholder="Enter email" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Role</label>
                            <select name="Role" class="form-select" required>
                                <option value="">Choose</option>
                                @foreach (var roleOption in ViewBag.Roles as List<string> ?? new List<string>())
                                {
                                    <option value="@roleOption">@roleOption</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input name="Phone" class="form-control" placeholder="Primary number" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Password</label>
                            <div class="input-group">
                                <input name="Password" id="addPassword" type="password" class="form-control" placeholder="Enter password" required />
                                <span class="input-group-text" id="toggleAddPassword" style="cursor:pointer;">
                                    <i class="fa-solid fa-eye-slash" id="addPasswordIcon"></i>
