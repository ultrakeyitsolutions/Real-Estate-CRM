@model CRM.Models.UserModel

@{
    ViewData["Title"] = "Edit User";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h4 class="fw-bold mb-3">Edit User</h4>

    <form asp-action="EditUser" method="post" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">
        <input type="hidden" asp-for="UserId" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Name</label>
                <input asp-for="Username" class="form-control" placeholder="Enter full name" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Roles as List<string> ?? new List<string>(), Model?.Role))">
                    <option value="">Choose</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Phone 1</label>
                <input asp-for="Phone" class="form-control" placeholder="Primary number" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Alternate Phone</label>
                <input name="AlternatePhone" class="form-control" placeholder="Alternate number" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Status</label><br />

                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="IsActive" value="true" class="form-check-input" />
                    <label class="form-check-label">Active</label>
                </div>

                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="IsActive" value="false" class="form-check-input" />
                    <label class="form-check-label">Inactive</label>
                </div>
            </div>
        </div>

        <div class="text-end mt-4">
            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-danger">Save Changes</button>
        </div>
    </form>
</div>
