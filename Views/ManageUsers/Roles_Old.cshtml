<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    <script>
        $(function () {
            // Add Role form submit
            $('#addRoleForm').on('submit', function (e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function (data) {
                    location.reload();
                });
            });

            // Edit Role button click
            $('.edit-role-btn').on('click', function () {
                var roleId = $(this).data('role-id');
                $.getJSON('/ManageUsers/GetRole?id=' + roleId, function (response) {
                    if (response.success) {
                        $('#editRoleId').val(response.id);
                        $('#editRoleName').val(response.roleName);
                        $('#editCanCreate').prop('checked', response.canCreate);
                        $('#editCanEdit').prop('checked', response.canEdit);
                        $('#editCanDelete').prop('checked', response.canDelete);
                        $('#editCanView').prop('checked', response.canView);
                        var modal = new bootstrap.Modal(document.getElementById('editRoleModal'));
                        modal.show();
                    } else {
                        alert(response.message || 'Role not found');
                    }
                }).fail(function(jqXHR, textStatus, errorThrown) {
                    console.error('AJAX error:', textStatus, errorThrown);
                });
            });

            // Edit Role form submit
            $('#editRoleForm').on('submit', function (e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function (data) {
                    location.reload();
                });
            });
        });
    </script>
}