@model IEnumerable<CRM.Models.RolePermission>

@{
    ViewData["Title"] = "Roles & Permissions";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Roles & Permissions</h2>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addRoleModal">
                    <i class="bi bi-plus-circle me-1"></i> Add New Role
                </button>
            </div>
            <form method="get" class="mb-3">
                <div class="row g-2 align-items-center">
                    <div class="col-md-4 position-relative">
                        <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control ps-5" placeholder="Search roles..." />
                        <i class="bi bi-search position-absolute" style="top: 10px; left: 15px; color: gray;"></i>
                    </div>
                </div>
            </form>
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-bordered table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Role</th>
                                    <th>Created At</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.RoleName</td>
                                            <td>@role.CreatedAt.ToString("dd MMM yyyy")</td>
                                            <td class="text-center">
                                                @* <a asp-action="AddRoles" asp-route-id="@role.Id" class="btn btn-sm btn-primary me-1" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="RolePermissions" asp-route-id="@role.Id" class="btn btn-sm btn-warning" title="Permissions">
                                                    <i class="bi bi-shield-lock"></i>
                                                </a> *@
                                                <button type="button" class="btn btn-sm btn-primary me-1 edit-role-btn" data-role-id="@role.Id" title="Edit">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No roles found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Mobile card view -->
                    <div class="d-block d-md-none">
                        <div class="row">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var role in Model)
                                {
                                    <div class="col-12 mb-3">
                                        <div class="card shadow-sm">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <h5 class="mb-0">@role.RoleName</h5>
                                                    <span class="text-muted">@role.CreatedAt.ToString("dd MMM yyyy")</span>
                                                </div>
                                                <div class="mt-2">
                                                   @*  <a asp-action="AddRoles" asp-route-id="@role.Id" class="btn btn-sm btn-primary me-1" title="Edit">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a> *@
                                                    <button type="button" class="btn btn-sm btn-primary me-1 edit-role-btn" data-role-id="@role.Id" title="Edit">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </button>

@*                                                     <a asp-action="RolePermissions" asp-route-id="@role.Id" class="btn btn-sm btn-warning" title="Permissions">
                                                        <i class="bi bi-shield-lock"></i> Permissions
                                                    </a> *@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12 text-center text-muted py-3">No roles found.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
<!-- Add Role Modal -->
<div class="modal fade" id="addRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="addRoleForm" method="post" action="/ManageUsers/AddRoles">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Role Name</label>
                        <input name="RoleName" class="form-control" placeholder="Enter role name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Permissions</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="CanCreate" value="true" id="canCreate">
                            <label class="form-check-label" for="canCreate">Can Create</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="CanEdit" value="true" id="canEdit">
                            <label class="form-check-label" for="canEdit">Can Edit</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="CanDelete" value="true" id="canDelete">
                            <label class="form-check-label" for="canDelete">Can Delete</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="CanView" value="true" id="canView">
                            <label class="form-check-label" for="canView">Can View</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

            <div class="modal fade" id="editRoleModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form id="editRoleForm" method="post" action="/ManageUsers/AddRoles">
                            <input type="hidden" name="Id" id="editRoleId" />
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Role</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Role Name</label>
                                    <input name="RoleName" id="editRoleName" class="form-control" placeholder="Enter role name" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Permissions</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="CanCreate" id="editCanCreate" value="true">
                                        <label class="form-check-label" for="editCanCreate">Can Create</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="CanEdit" id="editCanEdit" value="true">
                                        <label class="form-check-label" for="editCanEdit">Can Edit</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="CanDelete" id="editCanDelete" value="true">
                                        <label class="form-check-label" for="editCanDelete">Can Delete</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="CanView" id="editCanView" value="true">
                                        <label class="form-check-label" for="editCanView">Can View</label>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
       </div>
    </div>
</div>
